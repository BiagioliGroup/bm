<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Vista formulario del wizard de importación -->
    <record id="view_dux_import_wizard_form" model="ir.ui.view">
        <field name="name">dux.import.wizard.form</field>
        <field name="model">dux.import.wizard</field>
        <field name="arch" type="xml">
            <form string="Importación Dux Software">
                <header>
                    <button name="action_import" string="Ejecutar Importación" 
                            type="object" class="btn-primary"
                            attrs="{'invisible': [('state', 'in', ['running', 'done'])]}"/>
                    <button name="action_view_logs" string="Ver Logs" 
                            type="object" class="btn-secondary"
                            attrs="{'invisible': [('state', '=', 'draft')]}"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,running,done"/>
                </header>
                
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="connector_id" placeholder="Seleccionar conexión Dux..."/>
                        </h1>
                    </div>
                    
                    <group>
                        <group string="Configuración General">
                            <field name="import_mode"/>
                            <field name="batch_size"/>
                            <field name="update_existing"/>
                        </group>
                        
                        <group string="Datos a Importar">
                            <field name="import_clientes"/>
                            <field name="import_productos"/>
                            <field name="import_ventas"/>
                            <field name="import_compras"/>
                            <field name="import_stock"/>
                        </group>
                    </group>
                    
                    <group string="Filtros de Fecha" 
                           attrs="{'invisible': [('import_ventas', '=', False), ('import_compras', '=', False)]}">
                        <group>
                            <field name="fecha_desde"/>
                            <field name="fecha_hasta"/>
                        </group>
                    </group>
                    
                    <!-- Estadísticas (solo visible después de ejecutar) -->
                    <group string="Resultados" attrs="{'invisible': [('state', '=', 'draft')]}">
                        <group>
                            <field name="total_processed" readonly="1"/>
                            <field name="total_created" readonly="1"/>
                        </group>
                        <group>
                            <field name="total_updated" readonly="1"/>
                            <field name="total_errors" readonly="1"/>
                        </group>
                    </group>
                    
                    <!-- Logs -->
                    <notebook attrs="{'invisible': [('state', '=', 'draft')]}">
                        <page string="Logs de Proceso">
                            <field name="log_ids" readonly="1">
                                <list decoration-danger="level=='error'" 
                                      decoration-warning="level=='warning'"
                                      decoration-info="level=='info'">
                                    <field name="timestamp"/>
                                    <field name="level"/>
                                    <field name="message"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
    
    <!-- Acción del wizard -->
    <record id="action_dux_import_wizard" model="ir.actions.act_window">
        <field name="name">Importar desde Dux</field>
        <field name="res_model">dux.import.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="view_id" ref="view_dux_import_wizard_form"/>
    </record>
    
    <!-- Vista de logs -->
    <record id="view_dux_import_log_tree" model="ir.ui.view">
        <field name="name">dux.import.log.tree</field>
        <field name="model">dux.import.log</field>
        <field name="arch" type="xml">
            <list decoration-danger="level=='error'" 
                  decoration-warning="level=='warning'"
                  decoration-info="level=='info'">
                <field name="timestamp"/>
                <field name="level"/>
                <field name="message"/>
            </list>
        </field>
    </record>
    
    <record id="view_dux_import_log_form" model="ir.ui.view">
        <field name="name">dux.import.log.form</field>
        <field name="model">dux.import.log</field>
        <field name="arch" type="xml">
            <form string="Log de Importación">
                <sheet>
                    <group>
                        <field name="timestamp"/>
                        <field name="level"/>
                    </group>
                    <group>
                        <field name="message" colspan="2"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>