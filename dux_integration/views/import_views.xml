<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- VISTAS DE CONECTORES -->
    <record id="view_dux_connector_tree" model="ir.ui.view">
        <field name="name">dux.connector.tree</field>
        <field name="model">dux.connector</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="base_url"/>
                <field name="connection_status" decoration-success="connection_status=='connected'" 
                       decoration-danger="connection_status=='error'"/>
                <field name="last_sync"/>
                <field name="active"/>
            </list>
        </field>
    </record>
    
    <record id="view_dux_connector_form" model="ir.ui.view">
        <field name="name">dux.connector.form</field>
        <field name="model">dux.connector</field>
        <field name="arch" type="xml">
            <form string="Conexión Dux Software">
                <header>
                    <button name="test_connection" string="Probar Conexión" 
                            type="object" class="btn-primary"/>
                    <field name="connection_status" widget="statusbar"/>
                </header>
                
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Nombre de la conexión..."/>
                        </h1>
                    </div>
                    
                    <group>
                        <group string="Configuración de API">
                            <field name="base_url"/>
                            <field name="api_key" password="True"/>
                            <field name="id_empresa"/>
                            <field name="id_sucursal"/>
                            <field name="company_id"/>
                        </group>
                        
                        <group string="Estado">
                            <field name="active"/>
                            <field name="last_sync" readonly="1"/>
                        </group>
                    </group>
                    
                    <div class="alert alert-info" role="alert" style="margin-top: 20px;">
                        <strong>Configuración de API:</strong><br/>
                        • URL Base: Normalmente https://api.duxsoftware.com.ar<br/>
                        • API Key: Se obtiene desde la configuración de Dux Software<br/>
                        • Probar la conexión antes de usar en importaciones
                    </div>
                </sheet>
            </form>
        </field>
    </record>

    <!-- VISTAS DE WIZARD -->
    <record id="view_dux_import_wizard_form" model="ir.ui.view">
        <field name="name">dux.import.wizard.form</field>
        <field name="model">dux.import.wizard</field>
        <field name="arch" type="xml">
            <form string="Importación Dux Software">
                <header>
                    <button name="action_import" string="Ejecutar" 
                            type="object" class="btn-primary"
                            invisible="state != 'draft'"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,running,done"/>
                </header>
                
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="connector_id" placeholder="Seleccionar conexión Dux..."/>
                        </h1>
                    </div>
                    
                    <group>
                        <group string="Configuración General">
                            <field name="import_mode" widget="radio"/>
                            <field name="batch_size"/>
                            <field name="update_existing"/>
                        </group>
                        
                        <group string="Datos a Importar" invisible="import_mode == 'process_batches'">
                            <field name="import_clientes"/>
                            <field name="import_productos"/>
                            <field name="import_ventas"/>
                            <field name="import_compras"/>
                            <field name="import_pagos"/>
                            <field name="import_cobros"/>
                            <field name="import_stock"/>
                        </group>
                    </group>
                    
                    <group string="Filtros de Fecha" 
                        invisible="not (import_ventas or import_compras or import_pagos or import_cobros) or import_mode == 'process_batches'">
                        <group>
                            <field name="fecha_desde"/>
                            <field name="fecha_hasta"/>
                        </group>
                    </group>
                    
                    <!-- Selección de lotes existentes -->
                    <group string="Lotes a Procesar" invisible="import_mode != 'process_batches'">
                        <field name="available_batch_ids" widget="many2many_tags" 
                               domain="[('state', '=', 'raw')]"/>
                    </group>
                    
                    <!-- Estadísticas -->
                    <group string="Resultados" invisible="state == 'draft'">
                        <group>
                            <field name="total_processed" readonly="1"/>
                            <field name="total_created" readonly="1"/>
                        </group>
                        <group>
                            <field name="total_updated" readonly="1"/>
                            <field name="total_errors" readonly="1"/>
                        </group>
                    </group>
                    
                    <!-- Lotes creados -->
                    <group string="Lotes Creados" invisible="not created_batch_ids">
                        <field name="created_batch_ids" readonly="1">
                            <list>
                                <field name="batch_name"/>
                                <field name="data_type"/>
                                <field name="total_records"/>
                                <field name="state"/>
                                <button name="action_process_batch" string="Procesar" type="object" 
                                        icon="fa-play" invisible="state != 'raw'"/>
                            </list>
                        </field>
                    </group>
                    
                    <!-- Logs de proceso -->
                    <notebook>
                        <page string="Logs de Proceso">
                            <field name="log_ids" readonly="1">
                                <list decoration-danger="level=='error'" 
                                    decoration-warning="level=='warning'"
                                    decoration-info="level=='info'">
                                    <field name="timestamp"/>
                                    <field name="level"/>
                                    <field name="message"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
    
    <!-- VISTAS DE LOGS -->
    <record id="view_dux_import_log_tree" model="ir.ui.view">
        <field name="name">dux.import.log.tree</field>
        <field name="model">dux.import.log</field>
        <field name="arch" type="xml">
            <list decoration-danger="level=='error'" 
                decoration-warning="level=='warning'"
                decoration-info="level=='info'">
                <field name="timestamp"/>
                <field name="level"/>
                <field name="message"/>
            </list>
        </field>
    </record>
    
    <record id="view_dux_import_log_form" model="ir.ui.view">
        <field name="name">dux.import.log.form</field>
        <field name="model">dux.import.log</field>
        <field name="arch" type="xml">
            <form string="Log de Importación">
                <sheet>
                    <group>
                        <field name="timestamp"/>
                        <field name="level"/>
                    </group>
                    <group>
                        <field name="message" colspan="2"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- VISTAS DE MAPEO DE DIARIOS -->
    <record id="view_dux_journal_mapper_tree" model="ir.ui.view">
        <field name="name">dux.journal.mapper.tree</field>
        <field name="model">dux.journal.mapper</field>
        <field name="arch" type="xml">
            <list editable="bottom">
                <field name="name"/>
                <field name="operation_type"/>
                <field name="dux_type"/>
                <field name="journal_id"/>
                <field name="active"/>
            </list>
        </field>
    </record>

    <!-- VISTAS DE REGISTROS IMPORTADOS -->
    <record id="view_dux_import_record_tree" model="ir.ui.view">
        <field name="name">dux.import.record.tree</field>
        <field name="model">dux.import.record</field>
        <field name="arch" type="xml">
            <list decoration-success="state=='processed'" 
                  decoration-danger="state=='error'"
                  decoration-info="state=='imported'">
                <field name="import_date"/>
                <field name="batch_id"/>
                <field name="tipo"/>
                <field name="dux_numero"/>
                <field name="dux_tipo_comprobante"/>
                <field name="partner_id"/>
                <field name="amount_total"/>
                <field name="state"/>
                <field name="move_id"/>
                <field name="payment_id"/>
                <button name="action_process_record" string="Procesar" type="object" 
                        icon="fa-play" invisible="state != 'imported'"/>
                <button name="action_view_document" string="Ver Doc" type="object" 
                        icon="fa-external-link" invisible="not (move_id or payment_id)"/>
            </list>
        </field>
    </record>
    
    <record id="view_dux_import_record_form" model="ir.ui.view">
        <field name="name">dux.import.record.form</field>
        <field name="model">dux.import.record</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_process_record" string="Procesar" type="object" 
                            class="btn-primary" invisible="state != 'imported'"/>
                    <button name="action_view_document" string="Ver Documento" type="object" 
                            class="btn-secondary" invisible="not (move_id or payment_id)"/>
                    <field name="state" widget="statusbar"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="import_date"/>
                            <field name="batch_id"/>
                            <field name="tipo"/>
                            <field name="dux_numero"/>
                            <field name="dux_tipo_comprobante"/>
                            <field name="amount_total"/>
                        </group>
                        <group>
                            <field name="partner_id"/>
                            <field name="journal_id"/>
                            <field name="date"/>
                            <field name="move_id" readonly="1"/>
                            <field name="payment_id" readonly="1"/>
                        </group>
                    </group>
                    <group string="Datos Originales Dux">
                        <field name="dux_data_json" widget="text"/>
                    </group>
                    <group string="Detalle Líneas Pedido" invisible="not detalle_lineas">
                        <field name="detalle_lineas" widget="text"/>
                    </group>
                    <group string="Detalle Cobros" invisible="not detalle_cobros">
                        <field name="detalle_cobros" widget="text"/>
                    </group>
                    <group string="Notas/Errores" invisible="not (notes or error_msg)">
                        <field name="notes"/>
                        <field name="error_msg"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- VISTAS DE LOTES -->
    <record id="view_dux_import_batch_tree" model="ir.ui.view">
        <field name="name">dux.import.batch.tree</field>
        <field name="model">dux.import.batch</field>
        <field name="arch" type="xml">
            <list decoration-success="state=='processed'" 
                  decoration-danger="state=='error'"
                  decoration-warning="state=='processing'"
                  decoration-info="state=='raw'">
                <field name="create_date"/>
                <field name="batch_name"/>
                <field name="data_type"/>
                <field name="connector_id"/>
                <field name="fecha_desde"/>
                <field name="fecha_hasta"/>
                <field name="total_records"/>
                <field name="processed_count"/>
                <field name="error_count"/>
                <field name="state"/>
                <button name="action_process_batch" string="Procesar" type="object" 
                        icon="fa-play" invisible="state != 'raw'"/>
                <button name="action_view_import_records" string="Ver Registros" type="object" 
                        icon="fa-list" invisible="processed_count == 0"/>
            </list>
        </field>
    </record>
    
    <record id="view_dux_import_batch_form" model="ir.ui.view">
        <field name="name">dux.import.batch.form</field>
        <field name="model">dux.import.batch</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_process_batch" string="Procesar Lote" type="object" 
                            class="btn-primary" invisible="state != 'raw'"/>
                    <button name="action_view_import_records" string="Ver Registros" type="object" 
                            class="btn-secondary" invisible="processed_count == 0"/>
                    <field name="state" widget="statusbar"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="batch_name"/>
                        </h1>
                    </div>
                    
                    <group>
                        <group string="Información del Lote">
                            <field name="create_date" readonly="1"/>
                            <field name="data_type"/>
                            <field name="connector_id"/>
                            <field name="batch_size"/>
                        </group>
                        
                        <group string="Filtros Aplicados">
                            <field name="fecha_desde"/>
                            <field name="fecha_hasta"/>
                        </group>
                    </group>
                    
                    <group string="Estadísticas">
                        <group>
                            <field name="total_records" readonly="1"/>
                            <field name="processed_count" readonly="1"/>
                        </group>
                        <group>
                            <field name="error_count" readonly="1"/>
                            <field name="processing_notes" readonly="1" invisible="not processing_notes"/>
                        </group>
                    </group>
                    
                    <group string="Registros Importados" invisible="not import_record_ids">
                        <field name="import_record_ids" readonly="1">
                            <list limit="10">
                                <field name="tipo"/>
                                <field name="dux_numero"/>
                                <field name="partner_id"/>
                                <field name="amount_total"/>
                                <field name="state"/>
                            </list>
                        </field>
                    </group>
                    
                    <notebook>
                        <page string="Datos JSON Crudos" invisible="not raw_data_json">
                            <group>
                                <field name="raw_data_json" widget="text" readonly="1"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- ACCIONES -->
    <record id="action_dux_connector" model="ir.actions.act_window">
        <field name="name">Conexiones Dux</field>
        <field name="res_model">dux.connector</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Crear una nueva conexión con Dux Software
            </p>
            <p>
                Configure las credenciales de API para conectarse con Dux Software
                y realizar importaciones de datos.
            </p>
        </field>
    </record>
    
    <record id="action_dux_import_wizard" model="ir.actions.act_window">
        <field name="name">Importar desde Dux</field>
        <field name="res_model">dux.import.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
    
    <record id="action_dux_journal_mapper" model="ir.actions.act_window">
        <field name="name">Mapeo de Diarios</field>
        <field name="res_model">dux.journal.mapper</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Configurar mapeo de diarios Dux → Odoo
            </p>
            <p>
                Define cómo mapear los tipos de comprobante de Dux Software 
                a los diarios contables de Odoo.
            </p>
        </field>
    </record>
    
    <record id="action_dux_import_batch" model="ir.actions.act_window">
        <field name="name">Lotes de Importación</field>
        <field name="res_model">dux.import.batch</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No hay lotes de importación
            </p>
            <p>
                Los lotes de datos JSON aparecerán aquí para ser procesados.
                Use el asistente de importación para crear nuevos lotes.
            </p>
        </field>
    </record>
    
    <record id="action_dux_import_records" model="ir.actions.act_window">
        <field name="name">Registros Importados</field>
        <field name="res_model">dux.import.record</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No hay registros importados
            </p>
            <p>
                Los datos importados desde Dux aparecerán aquí para ser procesados.
            </p>
        </field>
    </record>

    <!-- MENÚS -->
    <menuitem id="menu_dux_integration_root" 
              name="Dux Integration" 
              sequence="100"/>
    
    <menuitem id="menu_dux_configuration" 
              name="Configuración"
              parent="menu_dux_integration_root" 
              sequence="10"/>
    
    <menuitem id="menu_dux_connectors" 
              name="Conexiones Dux"
              parent="menu_dux_configuration" 
              action="action_dux_connector" 
              sequence="10"/>
    
    <menuitem id="menu_dux_journal_mapper" 
              name="Mapeo de Diarios"
              parent="menu_dux_configuration" 
              action="action_dux_journal_mapper" 
              sequence="20"/>
    
    <menuitem id="menu_dux_import" 
              name="Importación"
              parent="menu_dux_integration_root" 
              sequence="20"/>
    
    <menuitem id="menu_dux_import_wizard" 
              name="Importar Datos"
              parent="menu_dux_import" 
              action="action_dux_import_wizard" 
              sequence="10"/>
    
    <menuitem id="menu_dux_import_batches" 
              name="Lotes de Importación"
              parent="menu_dux_import" 
              action="action_dux_import_batch" 
              sequence="15"/>
    
    <menuitem id="menu_dux_import_records" 
              name="Registros Importados"
              parent="menu_dux_import" 
              action="action_dux_import_records" 
              sequence="20"/>
</odoo>