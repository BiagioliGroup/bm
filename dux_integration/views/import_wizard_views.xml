<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Vista formulario del wizard de importación -->
    <record id="view_dux_import_wizard_form" model="ir.ui.view">
        <field name="name">dux.import.wizard.form</field>
        <field name="model">dux.import.wizard</field>
        <field name="arch" type="xml">
            <form string="Importación Dux Software">
                <header>
                    <button name="action_import" string="1. Cargar Datos" 
                            type="object" class="btn-primary"
                            invisible="current_step != 'config'"/>
                    <button name="action_validate_all" string="2. Validar Todo" 
                            type="object" class="btn-info"
                            invisible="current_step != 'preview'"/>
                    <button name="action_import_validated" string="3. Importar" 
                            type="object" class="btn-success"
                            invisible="current_step != 'preview'"/>
                    <field name="current_step" widget="statusbar" statusbar_visible="config,preview,import"/>
                </header>
                
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="connector_id" placeholder="Seleccionar conexión Dux..."/>
                        </h1>
                    </div>
                    
                    <group>
                        <group string="Configuración General">
                            <field name="import_mode"/>
                            <field name="batch_size"/>
                            <field name="update_existing"/>
                        </group>
                        
                        <group string="Datos a Importar">
                            <field name="import_clientes"/>
                            <field name="import_productos"/>
                            <field name="import_ventas"/>
                            <field name="import_compras"/>
                            <field name="import_pagos"/>
                            <field name="import_cobros"/>
                            <field name="import_stock"/>
                        </group>
                    </group>
                    
                    <group string="Filtros de Fecha" 
                           invisible="not (import_ventas or import_compras or import_pagos or import_cobros)">
                        <group>
                            <field name="fecha_desde"/>
                            <field name="fecha_hasta"/>
                        </group>
                    </group>
                    
                    <!-- Estadísticas -->
                    <group string="Resultados" invisible="state == 'draft'">
                        <group>
                            <field name="total_processed" readonly="1"/>
                            <field name="total_created" readonly="1"/>
                        </group>
                        <group>
                            <field name="total_updated" readonly="1"/>
                            <field name="total_errors" readonly="1"/>
                        </group>
                    </group>
                    
                    <!-- Vista previa de datos -->
                    <notebook invisible="current_step == 'config'">
                        <page string="Datos a Importar">
                            <field name="line_ids">
                                <list editable="bottom">
                                    <field name="state" decoration-success="state=='validated'" 
                                           decoration-danger="state=='error'" 
                                           decoration-info="state=='draft'"/>
                                    <field name="tipo"/>
                                    <field name="dux_numero"/>
                                    <field name="dux_tipo_comprobante"/>
                                    <field name="partner_name"/>
                                    <field name="partner_vat"/>
                                    <field name="partner_id"/>
                                    <field name="journal_suggested"/>
                                    <field name="journal_id"/>
                                    <field name="date"/>
                                    <field name="amount_total"/>
                                    <field name="error_msg" invisible="not error_msg"/>
                                    <button name="action_validate" string="Validar" type="object" 
                                            icon="fa-check" invisible="state == 'validated'"/>
                                </list>
                            </field>
                        </page>
                        <page string="Logs de Proceso">
                            <field name="log_ids" readonly="1">
                                <list decoration-danger="level=='error'" 
                                      decoration-warning="level=='warning'"
                                      decoration-info="level=='info'">
                                    <field name="timestamp"/>
                                    <field name="level"/>
                                    <field name="message"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                    
                    <!-- Logs cuando está en config -->
                    <notebook invisible="current_step != 'config'">
                        <page string="Logs de Proceso">
                            <field name="log_ids" readonly="1">
                                <list decoration-danger="level=='error'" 
                                      decoration-warning="level=='warning'"
                                      decoration-info="level=='info'">
                                    <field name="timestamp"/>
                                    <field name="level"/>
                                    <field name="message"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
    
    <!-- Vista de logs -->
    <record id="view_dux_import_log_tree" model="ir.ui.view">
        <field name="name">dux.import.log.tree</field>
        <field name="model">dux.import.log</field>
        <field name="arch" type="xml">
            <list decoration-danger="level=='error'" 
                  decoration-warning="level=='warning'"
                  decoration-info="level=='info'">
                <field name="timestamp"/>
                <field name="level"/>
                <field name="message"/>
            </list>
        </field>
    </record>
    
    <record id="view_dux_import_log_form" model="ir.ui.view">
        <field name="name">dux.import.log.form</field>
        <field name="model">dux.import.log</field>
        <field name="arch" type="xml">
            <form string="Log de Importación">
                <sheet>
                    <group>
                        <field name="timestamp"/>
                        <field name="level"/>
                    </group>
                    <group>
                        <field name="message" colspan="2"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>