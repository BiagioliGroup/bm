<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Security Groups -->
        <record id="group_mcp_user" model="res.groups">
            <field name="name">MCP User</field>
            <field name="category_id" ref="base.module_category_hidden" />
            <field name="comment">Users with access to MCP-enabled features but cannot configure MCP
                settings</field>
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]" />
        </record>

        <record id="group_mcp_admin" model="res.groups">
            <field name="name">MCP Administrator</field>
            <field name="category_id" ref="base.module_category_hidden" />
            <field name="comment">Users who can configure MCP settings and enable models</field>
            <field name="implied_ids" eval="[(4, ref('group_mcp_user'))]" />
            <field name="users" eval="[(4, ref('base.user_admin'))]" />
        </record>

        <!-- Record Rules -->
        <record id="rule_mcp_enabled_model_admin" model="ir.rule">
            <field name="name">MCP Enabled Models: administrators only</field>
            <field name="model_id" ref="model_mcp_enabled_model" />
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('group_mcp_admin'))]" />
            <field name="perm_read" eval="True" />
            <field name="perm_write" eval="True" />
            <field name="perm_create" eval="True" />
            <field name="perm_unlink" eval="True" />
        </record>

        <record id="rule_mcp_enabled_model_user" model="ir.rule">
            <field name="name">MCP Enabled Models: users read-only</field>
            <field name="model_id" ref="model_mcp_enabled_model" />
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('group_mcp_user'))]" />
            <field name="perm_read" eval="True" />
            <field name="perm_write" eval="False" />
            <field name="perm_create" eval="False" />
            <field name="perm_unlink" eval="False" />
        </record>
    </data>

    <!-- Add MCP Admin to Administration/Settings Group for Configuration Access -->
    <data noupdate="1">
        <record id="base.group_system" model="res.groups">
            <field name="implied_ids" eval="[(4, ref('group_mcp_admin'))]" />
        </record>
    </data>
</odoo>