<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="mcp_enabled_model_view_list" model="ir.ui.view">
        <field name="name">mcp.enabled.model.list</field>
        <field name="model">mcp.enabled.model</field>
        <field name="arch" type="xml">
            <list string="MCP Enabled Models">
                <header>
                    <button name="%(mcp_server.action_mcp_model_selection_wizard)d"
                        type="action"
                        string="Select Multiple Models"
                        class="btn btn-primary"
                        context="{}"
                        display="always"
                        help="Open wizard to enable multiple models at once" />
                </header>
                <field name="model_id" />
                <field name="model_name" />
                <field name="active" />
                <field name="allow_read" widget="boolean_toggle" />
                <field name="allow_create" widget="boolean_toggle" />
                <field name="allow_write" widget="boolean_toggle" />
                <field name="allow_unlink" widget="boolean_toggle" />
                <field name="write_date" string="Last Modified" />
                <field name="write_uid" string="Modified By" />
            </list>
        </field>
    </record>

    <record id="mcp_enabled_model_view_form" model="ir.ui.view">
        <field name="name">mcp.enabled.model.form</field>
        <field name="model">mcp.enabled.model</field>
        <field name="arch" type="xml">
            <form string="MCP Model Configuration">
                <sheet>
                    <div class="oe_title">
                        <label for="model_id" class="oe_edit_only" />
                        <h1>
                            <field name="model_id" options="{'no_create': True}" />
                        </h1>
                        <field name="model_name" readonly="1" groups="base.group_no_one" />
                    </div>
                    <group>
                        <group string="Access Settings">
                            <field name="active" />
                            <field name="allow_read" />
                            <field name="allow_create" />
                            <field name="allow_write" />
                            <field name="allow_unlink" />
                        </group>
                        <group string="Additional Information">
                            <field name="create_date" readonly="1" />
                            <field name="create_uid" readonly="1" />
                            <field name="write_date" readonly="1" />
                            <field name="write_uid" readonly="1" />
                        </group>
                    </group>
                    <notebook>
                        <page string="Notes">
                            <field name="notes"
                                placeholder="Add any notes about this model configuration..." />
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="mcp_enabled_model_view_search" model="ir.ui.view">
        <field name="name">mcp.enabled.model.search</field>
        <field name="model">mcp.enabled.model</field>
        <field name="arch" type="xml">
            <search string="Search MCP Models">
                <field name="model_id" />
                <field name="model_name" />
                <filter string="Active" name="active" domain="[('active', '=', True)]" />
                <filter string="Inactive" name="inactive" domain="[('active', '=', False)]" />
                <separator />
                <filter string="Allow Read" name="allow_read" domain="[('allow_read', '=', True)]" />
                <filter string="Allow Create" name="allow_create"
                    domain="[('allow_create', '=', True)]" />
                <filter string="Allow Write" name="allow_write"
                    domain="[('allow_write', '=', True)]" />
                <filter string="Allow Delete" name="allow_unlink"
                    domain="[('allow_unlink', '=', True)]" />
                <group expand="0" string="Group By">
                    <filter string="Model" name="group_by_model" context="{'group_by': 'model_id'}" />
                </group>
            </search>
        </field>
    </record>

    <record id="action_mcp_enabled_models" model="ir.actions.act_window">
        <field name="name">MCP Models</field>
        <field name="res_model">mcp.enabled.model</field>
        <field name="view_mode">list,form</field>
        <field name="search_view_id" ref="mcp_enabled_model_view_search" />
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No models enabled for MCP access
            </p>
            <p>
                Add a model to make it accessible through MCP.
            </p>
        </field>
    </record>
</odoo>