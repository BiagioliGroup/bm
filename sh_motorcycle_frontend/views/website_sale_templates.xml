<!-- üé® CSS espec√≠fico para las categor√≠as filtradas - SIMPLIFICADO -->
<template id="vehicle_categories_styles_safe">
    <xpath expr="//head" position="inside">
        <style>
            /* Estilos seguros para categor√≠as compatibles con veh√≠culo */
            .category-vehicle-compatible {
                opacity: 0.8;
                transition: opacity 0.3s ease;
            }
            
            .category-vehicle-compatible:hover {
                opacity: 1;
            }
            
            .alert.py-2 {
                border-radius: 6px;
                border-left: 4px solid #007bff;
            }
            
            .category-filter-info {
                animation: fadeIn 0.5s ease-in;
            }
            
            @keyframes fadeIn {
                from { opacity: 0; }
                to { opacity: 1; }
            }
            
            .no-categories-message {
                border-left: 4px solid #ffc107;
            }
        </style>
    </xpath>
</template>

