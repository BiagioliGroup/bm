# 4. MODIFICAR sh_motorcycle_frontend/views/res_config_settings_view.xml

<?xml version="1.0" encoding="utf-8"?>
<odoo>

	<!-- RES CONFIG SETTINGS FOR VEHICLE -->
	
    <record id="sh_motorcycle_frontend_res_settings" model="ir.ui.view">
        <field name="name">sh.motorcycle.frontend.res.settings</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="website.res_config_settings_view_form" />
        <field name="arch" type="xml">
            <xpath expr='//block[@id="website_info_settings"]' position='after'>
                <block title="Auto Parts Frontend" id="auto_parts_settings">
                    <setting help="'Garage Feature' will visible in shop page, user drop-down menu.">
                        <field name="sh_is_show_garage" />
                    </setting>
                    <setting help="For website shop page only.">
                        <field name="sh_do_not_consider_vehicle_over_category" />
                    </setting>

                    <setting help="For website shop page only.">
                        <field name="sh_do_not_consider_vehicle_over_attribute" />
                    </setting>

                    <setting help="For website shop page only.">
                        <field name="sh_do_not_consider_vehicle_over_price" />
                    </setting>
                </block>
                
                <!-- NUEVA SECCIÓN MAYORISTA -->
                <block title="Configuración Mayorista" id="mayorista_settings">
                    <setting string="Mostrar badge de lista de precios" help="Muestra el nombre de la lista de precios del usuario en el header del sitio web.">
                        <field name="sh_show_user_pricelist_badge" />
                    </setting>
                    
                    <setting string="Mostrar precios comparativos" help="Muestra diferentes precios según las listas configuradas.">
                        <field name="sh_show_comparative_prices" />
                    </setting>
                    
                    <setting string="Listas de precios visibles" help="Selecciona qué listas de precios mostrar como referencia en la tienda.">
                        <field name="sh_mayorista_pricelist_ids" widget="many2many_tags" />
                        <div class="text-muted mt-1">
                            <small>Las listas seleccionadas se mostrarán en la tienda junto al precio del usuario.</small>
                        </div>
                    </setting>
                </block>
            </xpath>
        </field>
    </record>
</odoo>