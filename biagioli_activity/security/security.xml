<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Categoría del módulo -->
    <record id="module_category_activity_project" model="ir.module.category">
        <field name="name">Integración Actividad-Proyecto</field>
        <field name="description">Gestionar la integración de actividades con proyectos/to-dos</field>
        <field name="sequence">20</field>
    </record>
    
    <!-- Grupos de usuarios -->
    <record id="group_todo_user" model="res.groups">
        <field name="name">Usuario de To-Do</field>
        <field name="category_id" ref="module_category_activity_project"/>
        <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
        <field name="comment">Los usuarios pueden crear y gestionar sus propios to-dos</field>
    </record>
    
    <record id="group_todo_manager" model="res.groups">
        <field name="name">Gerente de To-Do</field>
        <field name="category_id" ref="module_category_activity_project"/>
        <field name="implied_ids" eval="[(4, ref('group_todo_user'))]"/>
        <field name="comment">Los gerentes pueden ver y gestionar todos los to-dos</field>
    </record>
    
    <!-- Reglas de registro para To-Dos -->
    <record id="todo_user_rule" model="ir.rule">
        <field name="name">To-Do: Usuario solo puede ver sus propios to-dos</field>
        <field name="model_id" ref="model_project_todo"/>
        <field name="domain_force">[('user_ids', 'in', user.id)]</field>
        <field name="groups" eval="[(4, ref('group_todo_user'))]"/>
        <field name="perm_read" eval="True"/>
        <field name="perm_write" eval="True"/>
        <field name="perm_create" eval="True"/>
        <field name="perm_unlink" eval="True"/>
    </record>
    
    <record id="todo_manager_rule" model="ir.rule">
        <field name="name">To-Do: Gerente puede ver todos los to-dos</field>
        <field name="model_id" ref="model_project_todo"/>
        <field name="domain_force">[(1, '=', 1)]</field>
        <field name="groups" eval="[(4, ref('group_todo_manager'))]"/>
        <field name="perm_read" eval="True"/>
        <field name="perm_write" eval="True"/>
        <field name="perm_create" eval="True"/>
        <field name="perm_unlink" eval="True"/>
    </record>
    
    <!-- Auto-asignar grupo todo_user a todos los usuarios internos -->
    <record id="base.group_user" model="res.groups">
        <field name="implied_ids" eval="[(4, ref('group_todo_user'))]"/>
    </record>
</odoo>