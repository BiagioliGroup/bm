<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Vista Form del Wizard -->
    <record id="view_schedule_activity_wizard_form" model="ir.ui.view">
        <field name="name">schedule.activity.wizard.form</field>
        <field name="model">schedule.activity.wizard</field>
        <field name="arch" type="xml">
            <form string="Programar Actividad">
                <group>
                    <group>
                        <field name="activity_type_id" 
                               required="1"
                               options="{'no_create': True}"/>
                        <field name="summary" 
                               placeholder="ej. Seguimiento con cliente"/>
                        <field name="date_deadline" required="1"/>
                        <field name="user_id" 
                               required="1"
                               options="{'no_create': True}"/>
                    </group>
                    <group>
                        <field name="project_id" 
                               options="{'no_create': True}"
                               placeholder="Seleccionar proyecto (opcional)"/>
                        <div class="alert alert-info mt-2" 
                             invisible="not project_id">
                            <i class="fa fa-info-circle"/> 
                            Se crearÃ¡ una <strong>tarea</strong> en el proyecto seleccionado
                        </div>
                    </group>
                </group>
                
                <group string="Notas">
                    <field name="note" 
                           placeholder="Agregar notas..."
                           nolabel="1"/>
                </group>
                
                <!-- Campos ocultos -->
                <group invisible="1">
                    <field name="res_model"/>
                    <field name="res_id"/>
                </group>
                
                <footer>
                    <button name="action_schedule" 
                            string="Programar" 
                            type="object" 
                            class="btn-primary"/>
                    <button string="Cancelar" 
                            special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
    
    <!-- AcciÃ³n para el wizard desde menÃº (solo para testing) -->
    <record id="action_schedule_activity_wizard_test" model="ir.actions.act_window">
        <field name="name">ðŸ§ª Test Programar Actividad</field>
        <field name="res_model">schedule.activity.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="context">{
            'active_model': 'res.partner',
            'active_id': 1
        }</field>
    </record>
    
    <!-- MenÃº de prueba (temporal) -->
    <menuitem id="menu_test_schedule_wizard"
              name="ðŸ§ª Test Wizard Actividades"
              parent="project.menu_main_pm"
              action="action_schedule_activity_wizard_test"
              sequence="99"/>
</odoo>