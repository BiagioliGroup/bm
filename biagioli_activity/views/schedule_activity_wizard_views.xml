<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Vista Form del Wizard -->
    <record id="view_schedule_activity_wizard_form" model="ir.ui.view">
        <field name="name">schedule.activity.wizard.form</field>
        <field name="model">schedule.activity.wizard</field>
        <field name="arch" type="xml">
            <form string="Programar Actividad">
                <group>
                    <group>
                        <field name="activity_type_id" 
                               required="1"
                               options="{'no_create': True}"/>
                        <field name="summary" 
                               placeholder="ej. Seguimiento con cliente"/>
                        <field name="date_deadline" required="1"/>
                        <field name="deadline_time" 
                               widget="float_time"
                               help="Formato 24h: 9.0 = 09:00, 14.5 = 14:30"/>
                        <field name="reminder_time" 
                               help="Cuándo enviar el recordatorio"/>
                        <field name="user_id" 
                               required="1"
                               options="{'no_create': True}"/>
                    </group>
                    <group>
                        <field name="project_id" 
                               options="{'no_create': True}"
                               placeholder="Seleccionar proyecto (opcional)"/>
                        <div class="alert alert-info mt-2" 
                             invisible="not project_id">
                            <i class="fa fa-info-circle"/> 
                            Se creará una <strong>tarea</strong> en: <field name="project_id" readonly="1" nolabel="1" class="d-inline"/>
                        </div>
                    </group>
                </group>
                
                <group string="Notas">
                    <field name="note" 
                           placeholder="Agregar notas..."
                           nolabel="1"/>
                </group>
                
                <footer>
                    <button name="action_schedule" 
                            string="Programar" 
                            type="object" 
                            class="btn-primary"/>
                    <button string="Cancelar" 
                            special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
    
    <!-- Acción para el wizard -->
    <record id="action_schedule_activity_wizard" model="ir.actions.act_window">
        <field name="name">Programar Actividad</field>
        <field name="res_model">schedule.activity.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="binding_model_id" ref="mail.model_mail_activity"/>
        <field name="binding_type">action</field>
    </record>
</odoo>