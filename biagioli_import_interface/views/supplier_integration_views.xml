
<!-- views/supplier_integration_views.xml -->
<odoo>
    <!-- Vista Lista Integraciones de Proveedor -->
    <record id="view_supplier_integration_tree" model="ir.ui.view">
        <field name="name">supplier.integration.tree</field>
        <field name="model">supplier.integration</field>
        <field name="arch" type="xml">
            <tree>
                <field name="partner_id"/>
                <field name="integration_type"/>
                <field name="is_active"/>
                <field name="last_import"/>
                <field name="products_imported"/>
                <field name="last_sync_status"/>
                <button name="sync_products" type="object" string="Sincronizar" class="btn-primary"/>
                <button name="test_connection" type="object" string="Probar Conexión" class="btn-secondary"/>
            </tree>
        </field>
    </record>

    <!-- Vista Formulario Integración de Proveedor -->
    <record id="view_supplier_integration_form" model="ir.ui.view">
        <field name="name">supplier.integration.form</field>
        <field name="model">supplier.integration</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="test_connection" string="Probar Conexión" type="object" class="btn-secondary"/>
                    <button name="sync_products" string="Sincronizar Productos" type="object" class="btn-primary" confirm="¿Desea sincronizar todos los productos ahora?"/>
                    <field name="last_sync_status" widget="statusbar"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_import_logs" type="object" class="oe_stat_button" icon="fa-list">
                            <div class="o_stat_info">
                                <field name="products_imported" class="o_stat_value"/>
                                <span class="o_stat_text">Importados</span>
                            </div>
                        </button>
                        <button name="action_view_products" type="object" class="oe_stat_button" icon="fa-cube">
                            <div class="o_stat_info">
                                <field name="total_products_available" class="o_stat_value"/>
                                <span class="o_stat_text">Disponibles</span>
                            </div>
                        </button>
                    </div>
                    
                    <group>
                        <group string="Información Básica">
                            <field name="partner_id"/>
                            <field name="integration_type"/>
                            <field name="is_active"/>
                        </group>
                        <group string="Última Sincronización">
                            <field name="last_import"/>
                            <field name="auto_import"/>
                            <field name="import_interval_hours" attrs="{'invisible': [('auto_import', '=', False)]}"/>
                        </group>
                    </group>
                    
                    <notebook>
                        <page string="Configuración API">
                            <group>
                                <group>
                                    <field name="api_base_url" placeholder="https://www.wps-inc.com/data-depot"/>
                                    <field name="api_version"/>
                                </group>
                                <group>
                                    <field name="api_token" password="True"/>
                                </group>
                            </group>
                        </page>
                        
                        <page string="Filtros de Importación">
                            <group>
                                <group string="Filtros de Stock y Precio">
                                    <field name="min_stock_qty"/>
                                    <field name="max_price"/>
                                </group>
                                <group string="Filtros de Categoría">
                                    <field name="category_filter" placeholder="electronics,components,tools"/>
                                </group>
                            </group>
                        </page>
                        
                        <page string="Configuración de Precios">
                            <group>
                                <group string="Costos">
                                    <field name="import_cost_percentage"/>
                                    <field name="markup_percentage"/>
                                </group>
                            </group>
                            <div class="alert alert-info">
                                <strong>Cálculo de Precios:</strong><br/>
                                • Costo Total = Precio Proveedor + (Precio Proveedor × Costo Importación %)<br/>
                                • Precio Venta = Costo Total × (1 + Markup %)
                            </div>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Vista Log de Importación -->
    <record id="view_import_log_tree" model="ir.ui.view">
        <field name="name">product.import.log.tree</field>
        <field name="model">product.import.log</field>
        <field name="arch" type="xml">
            <tree decoration-success="status == 'success'" decoration-danger="status == 'error'" decoration-warning="status == 'warning'">
                <field name="import_date"/>
                <field name="supplier_integration_id"/>
                <field name="product_sku"/>
                <field name="status"/>
                <field name="message"/>
            </tree>
        </field>
    </record>

    <!-- Acción para Integraciones de Proveedor -->
    <record id="action_supplier_integration" model="ir.actions.act_window">
        <field name="name">Integraciones de Proveedor</field>
        <field name="res_model">supplier.integration</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Configurar nueva integración con proveedor
            </p>
            <p>
                Configure sus proveedores para importar productos automáticamente.<br/>
                Actualmente soportamos: WPS-inc
            </p>
        </field>
    </record>

    <!-- Acción para Logs de Importación -->
    <record id="action_import_log" model="ir.actions.act_window">
        <field name="name">Logs de Importación</field>
        <field name="res_model">product.import.log</field>
        <field name="view_mode">tree</field>
        <field name="context">{'search_default_group_by_supplier': 1}</field>
    </record>

    <!-- Menú Principal -->
    <menuitem id="menu_import_interface_root" name="Import Interface" sequence="50"/>
    
    <menuitem id="menu_supplier_integrations" name="Integraciones" parent="menu_import_interface_root" 
              action="action_supplier_integration" sequence="10"/>
              
    <menuitem id="menu_import_logs" name="Logs de Importación" parent="menu_import_interface_root" 
              action="action_import_log" sequence="20"/>
</odoo>