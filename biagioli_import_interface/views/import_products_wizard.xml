
<!-- wizard/import_products_wizard.xml -->
<odoo>
    <!-- Wizard para Importación Manual -->
    <record id="view_import_products_wizard" model="ir.ui.view">
        <field name="name">import.products.wizard.form</field>
        <field name="model">import.products.wizard</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="supplier_integration_id"/>
                        <field name="import_mode"/>
                    </group>
                    
                    <notebook>
                        <page string="Filtros Específicos">
                            <group>
                                <group>
                                    <field name="specific_skus" attrs="{'invisible': [('import_mode', '!=', 'specific')]}"/>
                                    <field name="category_filter"/>
                                </group>
                                <group>
                                    <field name="min_stock"/>
                                    <field name="max_price"/>
                                </group>
                            </group>
                        </page>
                        
                        <page string="Vista Previa" attrs="{'invisible': [('preview_count', '=', 0)]}">
                            <field name="preview_products"/>
                            <div class="alert alert-info">
                                Se importarán <field name="preview_count" readonly="1"/> productos
                            </div>
                        </page>
                    </notebook>
                </sheet>
                
                <footer>
                    <button string="Vista Previa" name="preview_import" type="object" class="btn-secondary"/>
                    <button string="Importar" name="import_products" type="object" class="btn-primary"/>
                    <button string="Cancelar" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_import_products_wizard" model="ir.actions.act_window">
        <field name="name">Importar Productos</field>
        <field name="res_model">import.products.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
</odoo>

<!-- data/supplier_data.xml -->
<odoo>
    <!-- Proveedor WPS como contacto -->
    <record id="partner_wps_inc" model="res.partner">
        <field name="name">WPS-inc</field>
        <field name="is_company">True</field>
        <field name="supplier_rank">1</field>
        <field name="country_id" ref="base.us"/>
        <field name="website">https://www.wps-inc.com</field>
        <field name="email">sales@wps-inc.com</field>
        
        <!-- Configuración de integración -->
        <field name="has_api_integration">True</field>
        <field name="api_base_url">https://www.wps-inc.com/data-depot</field>
        <field name="api_version">v4</field>
        <field name="requires_import">True</field>
        <field name="import_country_id" ref="base.us"/>
        <field name="default_markup_percentage">25.0</field>
        <field name="default_import_cost_percentage">15.0</field>
    </record>

    <!-- Integración de ejemplo para WPS -->
    <record id="supplier_integration_wps_demo" model="supplier.integration">
        <field name="partner_id" ref="partner_wps_inc"/>
        <field name="integration_type">wps</field>
        <field name="api_base_url">https://www.wps-inc.com/data-depot</field>
        <field name="api_version">v4</field>
        <field name="min_stock_qty">1</field>
        <field name="markup_percentage">25.0</field>
        <field name="import_cost_percentage">15.0</field>
        <field name="is_active">False</field>
    </record>
</odoo>