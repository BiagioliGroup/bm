<odoo>
  <template id="address_form_inherit" inherit_id="website_sale.address">
    <!-- Aquí asumimos que justo después del ZIP quieres la provincia -->
    <xpath expr="//div[contains(@class,'o_address_field_zip')]" position="after">
      <div class="form-group o_address_field_state_id">
        <label class="col-sm-3 control-label" for="state_id">
          <t t-esc="env['res.country.state']._fields['name'].string"/>
        </label>
        <div class="col-sm-9">
          <select
            name="state_id"
            id="state_id"
            class="form-control"
            required="required"
            t-att-disabled="not country_states">
            <option t-if="not country_states" value="">
              <t t-esc=" _('Select a country first') "/>
            </option>
            <t t-foreach="country_states" t-as="st">
              <option
                t-att-value="st.id"
                t-att-selected="st.id == state_id and 'selected' or False">
                <t t-esc="st.name"/>
              </option>
            </t>
          </select>
        </div>
      </div>
    </xpath>
  </template>
</odoo>
