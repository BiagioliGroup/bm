<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Heredar la vista de formulario de product.product -->
    <record id="biagioli_ecom_product_product_form_readonly_price" model="ir.ui.view">
        <field name="name">product.product.form.readonly.price</field>
        <field name="model">product.product</field>
        <field name="inherit_id" ref="product.product_normal_form_view"/>
        <field name="arch" type="xml">
            <field name="list_price" position="attributes">
                <attribute name="readonly">1</attribute>
            </field>
        </field>
    </record>

    <!-- Heredar la vista de lista de product.product -->
    <record id="biagioli_ecom_product_product_tree_readonly_price" model="ir.ui.view">
        <field name="name">product.product.tree.readonly.price</field>
        <field name="model">product.product</field>
        <field name="inherit_id" ref="product.product_product_tree_view"/>
        <field name="arch" type="xml">
            <field name="list_price" position="attributes">
                <attribute name="readonly">1</attribute>
            </field>
        </field>
    </record>
</odoo>
