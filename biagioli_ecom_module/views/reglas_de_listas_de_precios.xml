<odoo>

    <!-- üìÑ Vista tipo "tree" editable para editar reglas de precios directamente desde la lista -->
    <record id="view_pricelist_item_mass_edit_tree" model="ir.ui.view">
        <field name="name">product.pricelist.item.tree.editable</field>
        <field name="model">product.pricelist.item</field>
        <field name="arch" type="xml">
            <list editable="bottom" string="Editor de listas de precios">
                <!-- Campos visibles en la lista y editables en l√≠nea -->
                <field name="pricelist_id"/>
                <field name="product_tmpl_id"/>
                <field name="product_id"/>
                <field name="name"/>
                <field name="price"/> <!-- Solo informativo, el que se edita es 'fixed_price' -->
                <field name="min_quantity"/>
                <field name="date_start"/>
                <field name="date_end"/>
            </list>
        </field>
    </record>

    <!-- Acci√≥n -->
    <record id="action_mass_edit_pricelist_items" model="ir.actions.act_window">
        <field name="name">Edici√≥n masiva de reglas de precio</field>
        <field name="res_model">product.pricelist.item</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="biagioli_ecom_module.view_pricelist_item_mass_edit_tree"/>
        <field name="context">{}</field>
    </record>

    <!-- Men√∫: Submen√∫ dentro de 'Listas de precios' -->
    <menuitem id="menu_mass_edit_pricelist_items"
              name="Editor de reglas de precio"
              parent="product.menu_product_pricelists"
              action="biagioli_ecom_module.action_mass_edit_pricelist_items"
              sequence="35"/>
</odoo>
