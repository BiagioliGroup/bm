<odoo>
    <record id="view_pricelist_item_mass_edit_list" model="ir.ui.view">
        <field name="name">product.pricelist.item.list.editable</field>
        <field name="model">product.pricelist.item</field>
        <field name="arch" type="xml">
            <tree editable="bottom" string="Editor de listas de precios">
                <field name="pricelist_id"/>
                <field name="product_tmpl_id"/>
                <field name="product_id"/>
                <field name="name"/>
                <field name="price"/>
                <field name="min_quantity"/>
                <field name="date_start"/>
                <field name="date_end"/>
            </tree>
        </field>
    </record>

    <!-- Acción para abrir la lista -->
    <record id="action_mass_edit_pricelist_items" model="ir.actions.act_window">
        <field name="name">Edición masiva de reglas de precio</field>
        <field name="res_model">product.pricelist.item</field>
        <field name="view_mode">list,form</field>
        <field name="view_id" ref="biagioli_ecom_module.view_pricelist_item_mass_edit_list"/>
        <field name="context">{}</field>
    </record>

    <!-- Menú anidado debajo de "Listas de precios" (id interno 556) -->
    <menuitem id="menu_mass_edit_pricelist_items"
              name="Editor de reglas de precio"
              parent_id="556"
              action="biagioli_ecom_module.action_mass_edit_pricelist_items"
              sequence="35"/>

</odoo>
