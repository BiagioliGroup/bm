    <xpath expr="//form[contains(@class, 'checkout_autoformat')]" position="attributes">
      <!-- Reemplazamos la clase completa para desactivar el AJAX -->
      <attribute name="class">o_wsale_address_fill</attribute>
    </xpath>
  </template>
</odoo>
