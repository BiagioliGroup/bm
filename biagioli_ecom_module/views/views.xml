<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="action_apply_ribbon_by_supplier_mass" model="ir.actions.server">
        <field name="name">Aplicar cinta por proveedor</field>
        <field name="model_id" ref="product.model_product_product"/>
        <field name="binding_model_id" ref="product.model_product_product"/>
        <field name="binding_view_types">list</field>
        <field name="state">code</field>
        <field name="code">
            action = env['product.product'].browse(records.ids).action_apply_ribbon_by_supplier()
        </field>
    </record>

    <record id="product_product_tree_view_inherit_ribbon" model="ir.ui.view">
        <field name="name">product.product.tree.ribbon.button</field>
        <field name="model">product.product</field>
        <field name="inherit_id" ref="product.product_product_tree_view"/>
        <field name="arch" type="xml">
            <xpath expr="//tree" position="attributes">
                <attribute name="multi_edit">1</attribute>
            </xpath>
            <xpath expr="//tree" position="inside">
                <button name="action_apply_ribbon_by_supplier"
                        type="object"
                        string="Aplicar cinta"
                        class="btn-primary"
                        icon="fa-tags"/>
            </xpath>
        </field>
    </record>

</odoo>
