<odoo>
  <record id="view_account_move_search_repair_orders" model="ir.ui.view">
    <field name="name">account.move.search.repair.orders</field>
    <field name="model">account.move</field>
    <field name="arch" type="xml">
      <search string="Facturas de Órdenes de Rep">
        <!-- tu filtro nuevo -->
        <filter name="only_repair_orders"
                string="Sólo con Orden de Reparación"
                domain="[('repair_order_ids','!=', False)]"/>
        <!-- otros campos de búsqueda -->
        <field name="name"         string="Factura"/>
        <field name="partner_id"   string="Cliente"/>
        <field name="invoice_date" string="Fecha"/>
        <field name="state"        string="Estado"/>
      </search>
    </field>
  </record>
</odoo>
