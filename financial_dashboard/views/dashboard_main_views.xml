<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- ========================================== -->
    <!-- VISTA KANBAN PRINCIPAL (SIN REFERENCIAS EXTERNAS) -->
    <!-- ========================================== -->
    <record id="view_financial_dashboard_kanban" model="ir.ui.view">
        <field name="name">financial.dashboard.kanban</field>
        <field name="model">financial.dashboard</field>
        <field name="arch" type="xml">
            <kanban create="false" can_open="0" class="o_financial_dashboard_kanban">
                <field name="id"/>
                <field name="company_id"/>
                <field name="currency_id"/>
                <field name="total_cash_bank"/>
                <field name="pending_expenses_count"/>
                <field name="overdue_expenses_count"/>
                <field name="supplier_amount_due"/>
                <field name="customer_amount_due"/>
                <field name="supplier_invoices_not_paid"/>
                <field name="customer_invoices_not_paid"/>
                <!-- NUEVOS CAMPOS FISCALES -->
                <field name="total_cash_fiscal"/>
                <field name="total_cash_nofiscal"/>
                <field name="total_bank_fiscal"/>
                <field name="total_bank_nofiscal"/>
                <field name="supplier_amount_due_fiscal"/>
                <field name="supplier_amount_due_nofiscal"/>
                <field name="customer_amount_due_fiscal"/>
                <field name="customer_amount_due_nofiscal"/>
                <templates>
                    <t t-name="card">
                        <div class="o_kanban_card p-3">
                            <!-- ENCABEZADO -->
                            <div class="o_kanban_card_header mb-3">
                                <div class="o_kanban_card_header_title">
                                    <h3 class="mb-0">
                                        <i class="fa fa-dashboard text-primary me-2"/>
                                        Dashboard Financiero
                                    </h3>
                                    <small class="text-muted">
                                        <field name="company_id"/>
                                        <span class="ms-2 badge text-bg-info">Sistema Fiscal Integrado</span>
                                    </small>
                                    <div class="float-end">
                                        <button type="object" name="action_refresh_dashboard" class="btn btn-sm btn-light" title="Actualizar">
                                            <i class="fa fa-refresh"/>
                                        </button>
                                    </div>
                                </div>
                            </div>

                            <!-- RESUMEN TOTAL -->
                            <div class="row mb-3">
                                <div class="col-12">
                                    <div class="card bg-primary text-white">
                                        <div class="card-body text-center">
                                            <h4 class="card-title">Total Disponible</h4>
                                            <h2>
                                                <field name="total_cash_bank" widget="monetary"/>
                                            </h2>
                                            <small>Efectivo + Bancos (Fiscal + No Fiscal)</small>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <!-- DESGLOSE FISCAL VS NO FISCAL -->
                            <div class="row mb-3">
                                <div class="col-6">
                                    <div class="card bg-success text-white">
                                        <div class="card-header">
                                            <h6 class="mb-0">
                                                <i class="fa fa-check-circle me-1"/>
                                                FISCAL (Blanco)
                                            </h6>
                                        </div>
                                        <div class="card-body">
                                            <div class="small">
                                                <div class="mb-1">
                                                    <strong>Efectivo:</strong> 
                                                    <field name="total_cash_fiscal" widget="monetary"/>
                                                </div>
                                                <div class="mb-2">
                                                    <strong>Bancos:</strong> 
                                                    <field name="total_bank_fiscal" widget="monetary"/>
                                                </div>
                                                <hr class="my-2"/>
                                                <div>
                                                    <button type="object" name="action_view_fiscal_accounts" class="btn btn-sm btn-light w-100">
                                                        Ver Cuentas Fiscales
                                                    </button>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-6">
                                    <div class="card bg-dark text-white">
                                        <div class="card-header">
                                            <h6 class="mb-0">
                                                <i class="fa fa-eye-slash me-1"/>
                                                NO FISCAL (Negro)
                                            </h6>
                                        </div>
                                        <div class="card-body">
                                            <div class="small">
                                                <div class="mb-1">
                                                    <strong>Efectivo:</strong> 
                                                    <field name="total_cash_nofiscal" widget="monetary"/>
                                                </div>
                                                <div class="mb-2">
                                                    <strong>Bancos:</strong> 
                                                    <field name="total_bank_nofiscal" widget="monetary"/>
                                                </div>
                                                <hr class="my-2"/>
                                                <div>
                                                    <button type="object" name="action_view_nofiscal_accounts" class="btn btn-sm btn-light w-100">
                                                        Ver Cuentas No Fiscales
                                                    </button>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <!-- FACTURAS PROVEEDORES CON DESGLOSE FISCAL -->
                            <div class="row mb-3">
                                <div class="col-12">
                                    <div class="card border-warning">
                                        <div class="card-header bg-warning text-white">
                                            <h6 class="mb-0">
                                                <i class="fa fa-file-text-o me-1"/>
                                                Facturas de Proveedores Pendientes
                                            </h6>
                                        </div>
                                        <div class="card-body">
                                            <div class="row">
                                                <div class="col-4 text-center">
                                                    <h5 class="text-danger">
                                                        <field name="supplier_invoices_not_paid"/>
                                                    </h5>
                                                    <small>No Pagadas</small>
                                                </div>
                                                <div class="col-4 text-center">
                                                    <h6 class="text-success">
                                                        <field name="supplier_amount_due_fiscal" widget="monetary"/>
                                                    </h6>
                                                    <small>Fiscal</small>
                                                </div>
                                                <div class="col-4 text-center">
                                                    <h6 class="text-secondary">
                                                        <field name="supplier_amount_due_nofiscal" widget="monetary"/>
                                                    </h6>
                                                    <small>No Fiscal</small>
                                                </div>
                                            </div>
                                            <div class="mt-2 text-center">
                                                <strong>Total por Pagar: </strong>
                                                <span class="h5 text-primary">
                                                    <field name="supplier_amount_due" widget="monetary"/>
                                                </span>
                                            </div>
                                            <div class="mt-2 text-center">
                                                <button type="object" name="action_view_supplier_invoices_not_paid" class="btn btn-sm btn-warning">
                                                    <i class="fa fa-eye me-1"/>Ver Todas las Facturas
                                                </button>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <!-- FACTURAS CLIENTES CON DESGLOSE FISCAL -->
                            <div class="row mb-3">
                                <div class="col-12">
                                    <div class="card border-info">
                                        <div class="card-header bg-info text-white">
                                            <h6 class="mb-0">
                                                <i class="fa fa-file-o me-1"/>
                                                Facturas de Clientes Pendientes
                                            </h6>
                                        </div>
                                        <div class="card-body">
                                            <div class="row">
                                                <div class="col-4 text-center">
                                                    <h5 class="text-warning">
                                                        <field name="customer_invoices_not_paid"/>
                                                    </h5>
                                                    <small>No Cobradas</small>
                                                </div>
                                                <div class="col-4 text-center">
                                                    <h6 class="text-success">
                                                        <field name="customer_amount_due_fiscal" widget="monetary"/>
                                                    </h6>
                                                    <small>Fiscal</small>
                                                </div>
                                                <div class="col-4 text-center">
                                                    <h6 class="text-secondary">
                                                        <field name="customer_amount_due_nofiscal" widget="monetary"/>
                                                    </h6>
                                                    <small>No Fiscal</small>
                                                </div>
                                            </div>
                                            <div class="mt-2 text-center">
                                                <strong>Total por Cobrar: </strong>
                                                <span class="h5 text-success">
                                                    <field name="customer_amount_due" widget="monetary"/>
                                                </span>
                                            </div>
                                            <div class="mt-2 text-center">
                                                <button type="object" name="action_view_customer_invoices_not_paid" class="btn btn-sm btn-info">
                                                    <i class="fa fa-eye me-1"/>Ver Todas las Facturas
                                                </button>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <!-- GASTOS PERIÓDICOS -->
                            <div class="row mb-3">
                                <div class="col-6">
                                    <div class="card border-primary">
                                        <div class="card-body text-center">
                                            <h5 class="text-primary">
                                                <field name="pending_expenses_count"/>
                                            </h5>
                                            <small>Gastos Próximos</small>
                                            <div class="mt-2">
                                                <button type="object" name="action_view_pending_expenses" class="btn btn-sm btn-primary">
                                                    Ver Detalles
                                                </button>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-6">
                                    <div class="card border-danger">
                                        <div class="card-body text-center">
                                            <h5 class="text-danger">
                                                <field name="overdue_expenses_count"/>
                                            </h5>
                                            <small>Gastos Vencidos</small>
                                            <div class="mt-2" t-if="record.overdue_expenses_count.raw_value &gt; 0">
                                                <span class="badge text-bg-danger">¡URGENTE!</span>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <!-- ACCIONES RÁPIDAS USANDO MÉTODOS OBJECT -->
                            <div class="row">
                                <div class="col-3">
                                    <button type="object" name="action_view_cashflow_projection" class="btn btn-primary btn-sm w-100">
                                        <i class="fa fa-line-chart me-1"/>
                                        Cashflow
                                    </button>
                                </div>
                                <div class="col-3">
                                    <button type="object" name="action_import_invoices_to_cashflow" class="btn btn-warning btn-sm w-100">
                                        <i class="fa fa-download me-1"/>
                                        Importar
                                    </button>
                                </div>
                                <div class="col-3">
                                    <button type="object" name="action_view_periodic_expenses" class="btn btn-info btn-sm w-100">
                                        <i class="fa fa-calendar me-1"/>
                                        Gastos
                                    </button>
                                </div>
                                <div class="col-3">
                                    <button type="object" name="action_view_financial_analysis" class="btn btn-success btn-sm w-100">
                                        <i class="fa fa-bar-chart me-1"/>
                                        Análisis
                                    </button>
                                </div>
                            </div>

                            <!-- INFORMACIÓN DEL SISTEMA FISCAL -->
                            <div class="row mt-3">
                                <div class="col-12">
                                    <div class="alert alert-light" role="alert">
                                        <h6 class="alert-heading">
                                            <i class="fa fa-info-circle me-1"/>
                                            Sistema de Clasificación Fiscal
                                        </h6>
                                        <p class="mb-1">
                                            <strong>Fiscal (Blanco):</strong> CLV, BCIUD, MP, Facturas Ventas, etc.<br/>
                                            <strong>No Fiscal (Negro):</strong> EFE1, STRIP, CSH4, Caja Fuerte, etc.
                                        </p>
                                        <small class="text-muted">
                                            Clasificación automática basada en códigos de journals configurados.
                                        </small>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- ========================================== -->
    <!-- VISTA LISTA CON CAMPOS FISCALES -->
    <!-- ========================================== -->
    <record id="view_financial_dashboard_list" model="ir.ui.view">
        <field name="name">financial.dashboard.list</field>
        <field name="model">financial.dashboard</field>
        <field name="arch" type="xml">
            <list string="Dashboards Financieros" create="false" delete="false">
                <field name="display_name"/>
                <field name="company_id"/>
                <field name="total_cash_bank" widget="monetary"/>
                <field name="total_cash_fiscal" widget="monetary" string="Efectivo Fiscal"/>
                <field name="total_cash_nofiscal" widget="monetary" string="Efectivo No Fiscal"/>
                <field name="total_bank_fiscal" widget="monetary" string="Bancos Fiscal"/>
                <field name="total_bank_nofiscal" widget="monetary" string="Bancos No Fiscal"/>
                <field name="pending_expenses_count"/>
                <field name="supplier_amount_due_fiscal" widget="monetary"/>
                <field name="supplier_amount_due_nofiscal" widget="monetary"/>
                <field name="customer_amount_due_fiscal" widget="monetary"/>
                <field name="customer_amount_due_nofiscal" widget="monetary"/>
                <field name="monthly_projection" widget="monetary"/>
            </list>
        </field>
    </record>

    <!-- ========================================== -->
    <!-- ACCIÓN PRINCIPAL -->
    <!-- ========================================== -->
    <record id="action_financial_dashboard" model="ir.actions.act_window">
        <field name="name">Dashboard Financiero</field>
        <field name="res_model">financial.dashboard</field>
        <field name="view_mode">kanban,list</field>
        <field name="view_id" ref="view_financial_dashboard_kanban"/>
        <field name="target">current</field>
        <field name="domain">[]</field>
        <field name="context">{'create': False}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                ¡Bienvenido a su Dashboard Financiero Integrado!
            </p>
            <p>
                Su herramienta completa para control financiero con clasificación Fiscal/No Fiscal:
                <br/><br/>
                • <strong>Control de Efectivo y Bancos</strong> separados por tipo fiscal<br/>
                • <strong>Seguimiento de Facturas</strong> de proveedores y clientes<br/>
                • <strong>Gastos Periódicos</strong> con alertas de vencimiento<br/>
                • <strong>Proyecciones de Cashflow</strong> automáticas<br/>
                • <strong>Integración completa</strong> con contabilidad de Odoo<br/>
                <br/>
                <em>El dashboard se actualiza automáticamente con datos en tiempo real.</em>
            </p>
        </field>
    </record>

</odoo>