<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <record id="product_attribute_form_inherit_unit" model="ir.ui.view">
    <field name="name">product.attribute.form.inherit.unit</field>
    <field name="model">product.attribute</field>
    <field name="inherit_id" ref="product.product_attribute_view_form"/>
    <field name="arch" type="xml">
      <!-- Inserta la unidad justo después del campo name -->
      <xpath expr="//field[@name='name']" position="after">
        <field name="unit_id"/>
      </xpath>
      <!-- Añade un bloque para mostrar también las categorías técnicas -->
      <xpath expr="//sheet" position="inside">
        <group string="Categorías Técnicas" colspan="2">
          <field name="categ_ids" widget="many2many_tags"/>
        </group>
      </xpath>
    </field>
  </record>



      <!-- Modifica la vista de árbol de product.template.attribute.line para que
      el campo value_ids tenga un contexto que incluya sólo el default_attribute_id
      y no el show_attribute=False.
   -->
 <record id="sh_moto_inherit_prod_tmpl_attr_line_uom" model="ir.ui.view">
    <field name="name">sh.motorcycle.backend.product.template.config.uom</field>
    <field name="model">product.template</field>
    <!-- Heredamos la vista con el XML-ID correcto -->
    <field name="inherit_id" ref="product.product_template_only_form_view"/>
    <field name="arch" type="xml">
      <!-- 1) Quitamos el show_attribute=False del one2many attribute_line_ids -->
      <xpath expr="//field[@name='attribute_line_ids']" position="attributes">
        <attribute name="context">{'default_attribute_id': attribute_id}</attribute>
      </xpath>
      <!-- 2) Forzamos show_attribute=True en el many2many_tags de value_ids -->
      <xpath expr="//field[@name='attribute_line_ids']//field[@name='value_ids']" position="attributes">
        <attribute name="context">{'default_attribute_id': attribute_id, 'show_attribute': True}</attribute>
      </xpath>
    </field>
  </record>
  
</odoo>