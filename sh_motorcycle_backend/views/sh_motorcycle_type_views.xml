<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- List View -->
    <record id="sh_motorcycle_type_tree" model="ir.ui.view">
        <field name="name">sh.motorcycle.type.list</field>
        <field name="model">motorcycle.type</field>
        <field name="arch" type="xml">
            <list string="Tipos de Motocicleta" editable="bottom">
                <field name="name"/>
                <field name="company_id" column_invisible="True"/>
            </list>
        </field>
    </record>

    <!-- Action -->
    <record id="sh_motorcycle_type_action" model="ir.actions.act_window">
        <field name="name">Tipos</field>
        <field name="res_model">motorcycle.type</field>
        <field name="view_mode">list,form</field>
    </record>

    <!-- Menu Item -->
    <menuitem
        id="sh_motorcycle_type_menuitem"
        name="Tipos"
        parent="sh_motorcycle_menuitem_config"
        action="sh_motorcycle_type_action"
        sequence="1"/>
</odoo>