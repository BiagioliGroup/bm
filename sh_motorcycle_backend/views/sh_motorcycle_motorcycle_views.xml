<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- menuitem -->
    <menuitem
        id="sh_motorcycle_menuitem_root"
        sequence="1"
        name="Datos de Motos"
        groups="sh_motorcycle_backend.group_sh_motorcycle_user,sh_motorcycle_backend.group_sh_motorcycle_manager"
        web_icon="sh_motorcycle_backend,static/src/img/menu_icon.png"
    />

    <menuitem
        id="sh_motorcycle_menuitem_config"
        sequence="3"
        name="Configuraciones"
        parent="sh_motorcycle_menuitem_root"
        groups="sh_motorcycle_backend.group_sh_motorcycle_manager"
    />

    <!-- VISTA KANBAN SIMPLIFICADA Y ROBUSTA -->
    <record id="sh_motorcycle_motorcycle_kanban" model="ir.ui.view">
        <field name="name">sh.motorcycle.motorcycle.kanban</field>
        <field name="model">motorcycle.motorcycle</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile" default_group_by="make_id">
                <field name="name"/>
                <field name="make_id"/>
                <field name="mmodel_id"/>
                <field name="type_id"/>
                <field name="year"/>
                <field name="market"/>
                <field name="motorcycle_image"/>
                <templates>
                    <t t-name="card">
                        <div class="oe_kanban_card oe_kanban_global_click">
                            <div class="o_kanban_image">
                                <field name="motorcycle_image" widget="image" options="{'size': [150, 150]}"/>
                            </div>
                            <div class="oe_kanban_details">
                                <div class="o_kanban_record_top">
                                    <div class="o_kanban_record_headings">
                                        <strong class="o_kanban_record_title">
                                            <field name="name"/>
                                        </strong>
                                        <div class="o_kanban_record_subtitle text-muted">
                                            <field name="make_id"/> ‚Ä¢ <field name="mmodel_id"/>
                                        </div>
                                    </div>
                                </div>
                                <div class="o_kanban_record_body">
                                    <span class="badge text-bg-success">
                                        <field name="type_id"/>
                                    </span>
                                    <span class="badge text-bg-info ml-1">
                                        <field name="year"/>
                                    </span>
                                    <span class="badge text-bg-warning ml-1">
                                        <field name="market"/>
                                    </span>
                                </div>
                                <div class="o_kanban_record_bottom">
                                    <button name="action_create_service" type="object" 
                                            class="btn btn-primary btn-sm">
                                        <i class="fa fa-plus"/> Servicio
                                    </button>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- FORMULARIO PREMIUM -->
    <record id="sh_motorcycle_motorcycle_form" model="ir.ui.view">
        <field name="name">sh.motorcycle.motorcycle</field>
        <field name="model">motorcycle.motorcycle</field>
        <field name="arch" type="xml">
            <form string="Motocicleta">
                <header>
                    <!-- Botones de acci√≥n r√°pida -->
                    <button name="action_create_service" string="Crear Servicio" type="object" 
                            class="btn-primary" icon="fa-wrench"/>
                </header>
                <sheet>
                    <!-- Botones estad√≠sticos funcionales -->
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_services" type="object" 
                                class="oe_stat_button" icon="fa-wrench">
                            <div class="o_field_widget o_stat_info">
                                <span class="o_stat_value">
                                    <field name="service_ids" widget="statinfo"/>
                                </span>
                                <span class="o_stat_text">Servicios</span>
                            </div>
                        </button>
                        <button name="action_view_products" type="object" 
                                class="oe_stat_button" icon="fa-cube">
                            <div class="o_field_widget o_stat_info">
                                <span class="o_stat_value">
                                    <field name="product_ids" widget="statinfo"/>
                                </span>
                                <span class="o_stat_text">Productos</span>
                            </div>
                        </button>
                        <button name="action_view_technical_data" type="object" 
                                class="oe_stat_button" icon="fa-cogs">
                            <div class="o_field_widget o_stat_info">
                                <span class="o_stat_value">
                                    <field name="technical_data_ids" widget="statinfo"/>
                                </span>
                                <span class="o_stat_text">Datos T√©cnicos</span>
                            </div>
                        </button>
                    </div>

                    <div class="oe_title">
                        <label for="name" class="oe_edit_only"/>
                        <h1>
                            <field name="name" placeholder="Nombre de Motocicleta"/>
                        </h1>
                    </div>
                    
                    <!-- Imagen dividida en 2 columnas -->
                    <div class="row">
                        <div class="col-6">
                            <group string="Imagen Principal">
                                <field name="motorcycle_image" widget="image" 
                                       options="{'size': [400, 300], 'preview_image': 'motorcycle_image'}"/>
                            </group>
                        </div>
                        <div class="col-6">
                            <group string="Informaci√≥n Adicional">
                                <div class="alert alert-info" style="margin-top: 20px;">
                                    <strong><i class="fa fa-info-circle"/> Resumen:</strong>
                                    <br/>
                                    <field name="name" readonly="1" style="border: none; background: transparent; font-weight: bold;"/>
                                </div>
                                <!-- Espacio reservado para futuras funcionalidades -->
                            </group>
                        </div>
                    </div>

                    <!-- Informaci√≥n principal con dise√±o mejorado -->
                    <group>
                        <group string="Especificaciones B√°sicas" class="o_group_col_6">
                            <field name="mmodel_id" options="{'no_create': True}"/>
                            <field name="year" widget="integer"/>
                            <field name="market" widget="selection"/>
                        </group>
                        <group string="Clasificaci√≥n" class="o_group_col_6">
                            <field name="type_id" options="{'no_create': True}"/>
                            <field name="make_id" options="{'no_create': True}"/>
                            <field name="company_id" invisible="1"/>
                        </group>
                    </group>

                    <!-- Tabs con contenido organizado -->
                    <notebook>
                        <page string="üìö Documentaci√≥n" icon="fa-book">
                            <group string="Manuales T√©cnicos">
                                <group string="Manual OEM" class="o_group_col_6">
                                    <field name="oem_manual" filename="oem_manual_filename" 
                                           widget="pdf_viewer" options="{'accepted_file_extensions': '.pdf'}"/>
                                    <div class="text-muted">
                                        <small><i class="fa fa-info-circle"/> Manual del fabricante original</small>
                                    </div>
                                </group>
                                <group string="Manual de Usuario" class="o_group_col_6">
                                    <field name="user_manual" filename="user_manual_filename" 
                                           widget="pdf_viewer" options="{'accepted_file_extensions': '.pdf'}"/>
                                    <div class="text-muted">
                                        <small><i class="fa fa-info-circle"/> Manual de mantenimiento y uso</small>
                                    </div>
                                </group>
                            </group>
                        </page>
                        
                        <page string="üîß Servicios" icon="fa-wrench">
                            <div class="alert alert-info" role="alert" style="margin-bottom: 15px;">
                                <strong><i class="fa fa-lightbulb-o"/> Tip:</strong> 
                                Aqu√≠ puedes ver todos los servicios t√©cnicos asociados a esta motocicleta.
                            </div>
                            <field name="service_ids" mode="kanban,list,form">
                                <kanban>
                                    <field name="name"/>
                                    <field name="description"/>
                                    <field name="total_service_cost"/>
                                    <field name="currency_id"/>
                                    <templates>
                                        <t t-name="card">
                                            <div class="oe_kanban_card">
                                                <div class="oe_kanban_content">
                                                    <div class="o_kanban_record_title">
                                                        <field name="name"/>
                                                    </div>
                                                    <div class="o_kanban_record_subtitle" style="margin-top: 5px; color: #666;">
                                                        <field name="description"/>
                                                    </div>
                                                    <div class="o_kanban_record_bottom" style="margin-top: 10px;">
                                                        <span class="badge text-bg-success">
                                                            <field name="total_service_cost" widget="monetary" 
                                                                   options="{'currency_field': 'currency_id'}"/>
                                                        </span>
                                                    </div>
                                                </div>
                                            </div>
                                        </t>
                                    </templates>
                                </kanban>
                                <list>
                                    <field name="name"/>
                                    <field name="description"/>
                                    <field name="total_service_cost" widget="monetary" 
                                           options="{'currency_field': 'currency_id'}"/>
                                </list>
                            </field>
                        </page>
                        
                        <page string="üìä Datos T√©cnicos" icon="fa-tachometer">
                            <div class="alert alert-warning" role="alert" style="margin-bottom: 15px;">
                                <strong><i class="fa fa-cogs"/> Especificaciones:</strong> 
                                Define las caracter√≠sticas t√©cnicas detalladas por categor√≠as.
                                <div class="mt-2">
                                    <small class="text-muted">
                                        <strong>Pasos:</strong> 1) Selecciona Categor√≠a ‚Üí 2) Elige Atributo ‚Üí 3) Define o Crea Valor
                                    </small>
                                </div>
                            </div>
                            <field name="technical_data_ids" mode="list">
                                <list editable="bottom" decoration-info="category_id" 
                                      decoration-muted="not value_id">
                                    <field name="category_id" 
                                           options="{'no_create': True}"
                                           domain="[('attribute_ids', '!=', False)]"/>
                                    <field name="attribute_id" 
                                           domain="[('categ_ids', '=', category_id)]" 
                                           options="{'no_create': True}"/>
                                    <field name="value_id" 
                                           domain="[('attribute_id', '=', attribute_id)]" 
                                           options="{'no_open': True}"
                                           context="{'default_attribute_id': attribute_id}"/>
                                    <field name="note" optional="show"/>
                                </list>
                            </field>
                        </page>

                        <page string="üì¶ Productos" icon="fa-cube">
                            <div class="alert alert-success" role="alert" style="margin-bottom: 15px;">
                                <strong><i class="fa fa-cubes"/> Repuestos:</strong> 
                                Productos y repuestos compatibles con esta motocicleta.
                            </div>
                            <field name="product_ids" mode="kanban,list">
                                <kanban>
                                    <field name="name"/>
                                    <field name="default_code"/>
                                    <field name="lst_price"/>
                                    <templates>
                                        <t t-name="card">
                                            <div class="oe_kanban_card">
                                                <div class="oe_kanban_content">
                                                    <div class="o_kanban_record_title">
                                                        <field name="name"/>
                                                    </div>
                                                    <div class="o_kanban_record_subtitle">
                                                        Ref: <field name="default_code"/>
                                                    </div>
                                                    <div class="o_kanban_record_bottom">
                                                        <span class="badge text-bg-primary">
                                                            <field name="lst_price" widget="monetary"/>
                                                        </span>
                                                    </div>
                                                </div>
                                            </div>
                                        </t>
                                    </templates>
                                </kanban>
                                <list>
                                    <field name="default_code"/>
                                    <field name="name"/>
                                    <field name="lst_price" widget="monetary"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- LISTA PREMIUM CON DECORACIONES AVANZADAS -->
    <record id="sh_motorcycle_motorcycle_tree" model="ir.ui.view">
        <field name="name">sh_motorcycle_motorcycle</field>
        <field name="model">motorcycle.motorcycle</field>
        <field name="arch" type="xml">
            <list string="Motocicletas" 
                  decoration-info="market == 'EUR'"
                  decoration-success="market == 'USA'"
                  decoration-warning="market == 'ARG'"
                  decoration-muted="market == 'JP'"
                  decoration-danger="year &lt; 2015"
                  sample="1"
                  multi_edit="1"
                  export_xlsx="1">
                
                <field name="motorcycle_image" widget="image" options="{'size': [64, 64]}"/>
                <field name="name" string="Motocicleta"/>
                <field name="type_id" widget="badge" options="{'color_field': 'name'}"/>
                <field name="make_id"/>
                <field name="mmodel_id"/>
                <field name="year" widget="badge"/>
                <field name="market" widget="selection_badge"/>
                <field name="product_ids" widget="many2many_tags" optional="hide" 
                       options="{'color_field': 'categ_id'}"/>
                <field name="service_ids" widget="many2many_tags" optional="hide"/>
                
                <!-- Campos para filtros pero ocultos -->
                <field name="company_id" column_invisible="1"/>
            </list>
        </field>
    </record>

    <!-- B√öSQUEDA AVANZADA -->
    <record id="sh_motorcycle_motorcycle_search" model="ir.ui.view">
        <field name="name">sh.motorcycle.motorcycle.search</field>
        <field name="model">motorcycle.motorcycle</field>
        <field name="arch" type="xml">
            <search string="B√∫squeda Avanzada de Motocicletas">
                <!-- B√∫squeda principal mejorada -->
                <field name="name" string="Motocicleta"
                       filter_domain="['|','|','|','|',('name','ilike',self),('type_id','ilike',self),('make_id','ilike',self),('mmodel_id','ilike',self),('year','ilike',self)]"/>
                
                <!-- Campos de b√∫squeda espec√≠ficos -->
                <field name="type_id" string="Tipo" filter_domain="[('type_id','ilike',self)]"/>
                <field name="make_id" string="Marca" filter_domain="[('make_id','ilike',self)]"/>
                <field name="mmodel_id" string="Modelo" filter_domain="[('mmodel_id','ilike',self)]"/>
                <field name="year" string="A√±o"/>
                <field name="market" string="Mercado"/>
                
                <!-- Separador visual -->
                <separator/>
                
                <!-- Filtros r√°pidos por mercado -->
                <filter name="filter_eur" string="üá™üá∫ Europa" domain="[('market', '=', 'EUR')]"/>
                <filter name="filter_usa" string="üá∫üá∏ Estados Unidos" domain="[('market', '=', 'USA')]"/>
                <filter name="filter_arg" string="üá¶üá∑ Argentina" domain="[('market', '=', 'ARG')]"/>
                <filter name="filter_aus" string="üá¶üá∫ Australia" domain="[('market', '=', 'AUS')]"/>
                <filter name="filter_jp" string="üáØüáµ Jap√≥n" domain="[('market', '=', 'JP')]"/>
                
                <separator/>
                
                <!-- Filtros por a√±o -->
                <filter name="filter_recent" string="üÜï Recientes (2020+)" 
                        domain="[('year', '&gt;=', 2020)]"/>
                <filter name="filter_vintage" string="üèõÔ∏è Vintage (Pre-2000)" 
                        domain="[('year', '&lt;', 2000)]"/>
                
                <separator/>
                
                <!-- Filtros por contenido -->
                <filter name="filter_with_services" string="üîß Con Servicios" 
                        domain="[('id', 'in', [])]"
                        context="{'search_services': True}"/>
                <filter name="filter_with_products" string="üì¶ Con Productos" 
                        domain="[('product_ids', '!=', False)]"/>
                <filter name="filter_with_tech_data" string="üìä Con Datos T√©cnicos" 
                        domain="[('technical_data_ids', '!=', False)]"/>
                <filter name="filter_with_manuals" string="üìö Con Manuales" 
                        domain="['|', ('oem_manual', '!=', False), ('user_manual', '!=', False)]"/>
                
                <!-- Agrupaciones avanzadas -->
                <group expand="0" string="üìä Agrupar por">
                    <filter name="group_make_id" string="üè≠ Marca" domain="[]" 
                            context="{'group_by':'make_id'}"/>
                    <filter name="group_type_id" string="üèçÔ∏è Tipo" domain="[]" 
                            context="{'group_by':'type_id'}"/>
                    <filter name="group_market" string="üåç Mercado" domain="[]" 
                            context="{'group_by':'market'}"/>
                    <filter name="group_year" string="üìÖ A√±o" domain="[]" 
                            context="{'group_by':'year'}"/>
                    <filter name="group_decade" string="üìä D√©cada" domain="[]" 
                            context="{'group_by':'year:decade'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- ACCI√ìN MEJORADA -->
    <record id="sh_motorcycle_motorcycle_action" model="ir.actions.act_window">
        <field name="name">üèçÔ∏è Gesti√≥n de Motocicletas</field>
        <field name="res_model">motorcycle.motorcycle</field>
        <field name="view_mode">kanban,list,form</field>
        <field name="search_view_id" ref="sh_motorcycle_motorcycle_search"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                ¬°Comienza tu gesti√≥n de motocicletas!
            </p>
            <p>
                <strong>Crea tu primera motocicleta</strong> y aprovecha todas las funciones avanzadas:
            </p>
            <ul style="text-align: left; display: inline-block;">
                <li>üìä Gesti√≥n t√©cnica completa con especificaciones detalladas</li>
                <li>üîß Servicios y mantenimiento organizados</li>
                <li>üì¶ Control de repuestos y compatibilidad</li>
                <li>üìö Biblioteca de manuales digitales</li>
                <li>üéØ B√∫squedas avanzadas y filtros inteligentes</li>
            </ul>
        </field>
        <field name="context">{
            'search_default_filter_recent': 1
        }</field>
    </record>

    <!-- Menu Item -->
    <menuitem
        id="sh_motorcycle_menuitem_sub"
        sequence="1"
        name="üèçÔ∏è Motocicletas"
        parent="sh_motorcycle_menuitem_root"
        action="sh_motorcycle_motorcycle_action"
        groups="sh_motorcycle_backend.group_sh_motorcycle_user,sh_motorcycle_backend.group_sh_motorcycle_manager"
    />

    <!-- VISTAS DE DATOS T√âCNICOS CORREGIDAS -->
    <record id="view_motorcycle_technical_data_tree" model="ir.ui.view">
        <field name="name">motorcycle.technical.data.tree</field>
        <field name="model">motorcycle.technical.data</field>
        <field name="arch" type="xml">
            <list string="Especificaciones T√©cnicas" editable="bottom"
                  decoration-info="category_id"
                  decoration-muted="not value_id"
                  decoration-success="note"
                  sample="1"
                  default_order="category_id, attribute_id">
                <field name="motorcycle_id" column_invisible="1"/>
                <field name="category_id" 
                       options="{'no_create': True}"
                       domain="[('attribute_ids', '!=', False)]"/>
                <field name="attribute_id" 
                       domain="[('categ_ids', '=', category_id)]" 
                       options="{'no_create': True}"
                       context="{'default_categ_ids': [(4, category_id)]}"/>
                <field name="value_id" 
                       domain="[('attribute_id', '=', attribute_id)]" 
                       options="{'no_open': True}"
                       context="{'default_attribute_id': attribute_id}"/>
                <field name="note" widget="text" optional="show"/>
            </list>
        </field>
    </record>

    <record id="view_motorcycle_technical_data_form" model="ir.ui.view">
        <field name="name">motorcycle.technical.data.form</field>
        <field name="model">motorcycle.technical.data</field>
        <field name="arch" type="xml">
            <form string="Especificaci√≥n T√©cnica">
                <sheet>
                    <group>
                        <group string="Clasificaci√≥n">
                            <field name="motorcycle_id" invisible="1"/>
                            <field name="category_id" 
                                   options="{'no_create': True}"
                                   domain="[('attribute_ids', '!=', False)]"/>
                            <field name="attribute_id" 
                                   domain="[('categ_ids', '=', category_id)]"
                                   options="{'no_create': True}"/>
                        </group>
                        <group string="Valor">
                            <field name="value_id" 
                                   domain="[('attribute_id', '=', attribute_id)]"
                                   options="{'no_open': True}"
                                   context="{'default_attribute_id': attribute_id}"/>
                            <field name="note" placeholder="Observaciones adicionales..."/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- ACCI√ìN DE DATOS T√âCNICOS -->
    <record id="action_motorcycle_technical_data" model="ir.actions.act_window">
        <field name="name">üìä Datos T√©cnicos</field>
        <field name="res_model">motorcycle.technical.data</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                ¬°Define especificaciones t√©cnicas!
            </p>
            <p>
                Crea un cat√°logo t√©cnico completo organizando las caracter√≠sticas
                de cada motocicleta por categor√≠as y atributos espec√≠ficos.
            </p>
        </field>
    </record>

    <!-- Menu t√©cnico -->
    <menuitem
        id="menu_motorcycle_technical_data"
        name="üìä Datos T√©cnicos"
        parent="sh_motorcycle_menuitem_config"
        action="action_motorcycle_technical_data"
        sequence="5"
        groups="sh_motorcycle_backend.group_sh_motorcycle_manager"
    />

    <!-- HERENCIA ELIMINADA PARA EVITAR DUPLICACI√ìN -->
    <!-- La pesta√±a de Datos T√©cnicos ya est√° incluida en el formulario principal -->
</odoo>