<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- menuitem -->
    <!-- Motorcycle menuitem root -->
    <menuitem
        id="sh_motorcycle_menuitem_root"
        sequence="1"
        name="Datos de Motos"
        groups="sh_motorcycle_backend.group_sh_motorcycle_user,sh_motorcycle_backend.group_sh_motorcycle_manager"
        web_icon="sh_motorcycle_backend,static/src/img/menu_icon.png"
    />

    <menuitem
        id="sh_motorcycle_menuitem_config"
        sequence="3"
        name="Configuraciones"
        parent="sh_motorcycle_menuitem_root"
        groups="sh_motorcycle_backend.group_sh_motorcycle_manager"
    />

    <!-- VISTA KANBAN PARA MOTOCICLETAS -->
    <record id="sh_motorcycle_motorcycle_kanban" model="ir.ui.view">
        <field name="name">sh.motorcycle.motorcycle.kanban</field>
        <field name="model">motorcycle.motorcycle</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile">
                <field name="name"/>
                <field name="make_id"/>
                <field name="mmodel_id"/>
                <field name="type_id"/>
                <field name="year"/>
                <field name="market"/>
                <field name="motorcycle_image"/>
                <templates>
                    <t t-name="card">
                        <div class="oe_kanban_card oe_kanban_global_click">
                            <div class="o_kanban_image">
                                <img t-att-src="kanban_image('motorcycle.motorcycle', 'motorcycle_image', record.id.raw_value)" 
                                     alt="Motocicleta" class="o_kanban_image_inner"/>
                            </div>
                            <div class="oe_kanban_details">
                                <div class="o_kanban_record_top">
                                    <div class="o_kanban_record_headings">
                                        <strong class="o_kanban_record_title">
                                            <field name="name"/>
                                        </strong>
                                        <small class="o_kanban_record_subtitle text-muted">
                                            <field name="make_id"/> • <field name="mmodel_id"/>
                                        </small>
                                    </div>
                                </div>
                                <div class="o_kanban_record_body">
                                    <div class="row">
                                        <div class="col-6">
                                            <span class="badge text-bg-info">
                                                <field name="year"/>
                                            </span>
                                        </div>
                                        <div class="col-6">
                                            <span class="badge text-bg-secondary">
                                                <field name="market"/>
                                            </span>
                                        </div>
                                    </div>
                                    <div class="row mt-2">
                                        <div class="col-12">
                                            <span class="badge text-bg-primary">
                                                <field name="type_id"/>
                                            </span>
                                        </div>
                                    </div>
                                </div>
                                <div class="o_kanban_record_bottom">
                                    <div class="oe_kanban_bottom_left">
                                        <button name="action_create_service" type="object" 
                                                class="btn btn-primary btn-sm">
                                            <i class="fa fa-wrench"/> Crear Servicio
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Form View -->
    <record id="sh_motorcycle_motorcycle_form" model="ir.ui.view">
        <field name="name">sh.motorcycle.motorcycle</field>
        <field name="model">motorcycle.motorcycle</field>
        <field name="arch" type="xml">
            <form string="Motocicleta">
                <sheet>
                    <!-- Botones estadísticos simplificados -->
                    <div class="oe_button_box" name="button_box">
                        <button name="%(sh_motorcycle_backend.action_motorcycle_service)d" type="action" 
                                class="oe_stat_button" icon="fa-wrench"
                                context="{'default_motorcycle_ids': [(4, active_id)]}">
                            <div class="o_field_widget o_stat_info">
                                <span class="o_stat_value">
                                    <field name="service_ids" widget="statinfo"/>
                                </span>
                                <span class="o_stat_text">Servicios</span>
                            </div>
                        </button>
                    </div>

                    <div class="oe_title">
                        <label for="name" class="oe_edit_only"/>
                        <h1>
                            <field name="name" placeholder="Nombre de Motocicleta"/>
                        </h1>
                    </div>
                    
                    <!-- Nueva Sección: Imagen -->
                    <group string="Imagen de la Motocicleta">
                        <field name="motorcycle_image" widget="image" options="{'size': [450, 450]}"/>
                    </group>

                    <group>
                        <group>
                            <field name="mmodel_id"/>
                            <field name="year"/>
                            <field name="market" widget="selection"/>
                        </group>
                        <group>
                            <field name="type_id"/>
                            <field name="make_id"/>
                            <field name="company_id" invisible="1"/>
                        </group>
                    </group>

                    <!-- Nueva Sección: Documentos -->
                    <notebook>
                        <page string="Manuales">
                            <group string="Documentos" colspan="2">
                                <group colspan="1">
                                    <field name="oem_manual" filename="oem_manual_filename" widget="pdf_viewer"/>
                                </group>
                                <group colspan="1">
                                    <field name="user_manual" filename="user_manual_filename" widget="pdf_viewer"/>
                                </group>
                            </group>
                        </page>
                        <page string="Servicios asignados">
                            <field name="service_ids"/>
                        </page>
                        <page string="Datos Técnicos">
                            <field name="technical_data_ids"
                                   widget="one2many"
                                   mode="tree"
                                   context="{'default_motorcycle_id': active_id}"/>
                        </page>
                    </notebook>

                    <group string="Productos equivalentes">
                        <field name="product_ids">
                            <tree editable="bottom">
                                <field name="default_code"/>
                                <field name="name"/>
                                <field name="product_template_attribute_value_ids" widget="many2many_tags"
                                       groups="product.group_product_variant"/>
                                <field name="lst_price"/>
                            </tree>
                        </field>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- List View -->
    <record id="sh_motorcycle_motorcycle_tree" model="ir.ui.view">
        <field name="name">sh_motorcycle_motorcycle</field>
        <field name="model">motorcycle.motorcycle</field>
        <field name="arch" type="xml">
            <tree string="Motocicletas" 
                  decoration-info="market == 'EUR'"
                  decoration-success="market == 'USA'"
                  decoration-warning="market == 'ARG'"
                  decoration-muted="market == 'JP'"
                  sample="1"
                  multi_edit="1">
                <field name="name"/>
                <field name="type_id" widget="badge" options="{'color_field': 'name'}"/>
                <field name="make_id"/>
                <field name="mmodel_id"/>
                <field name="year"/>
                <field name="market" widget="badge"/>
                <field name="motorcycle_image" filename="motorcycle image" widget="image"
                       options="{'size': [64, 64]}"/>
                <field name="product_ids" widget="many2many_tags" optional="hide"/>
                <field name="service_ids" widget="many2many_tags" optional="hide"/>
            </tree>
        </field>
    </record>

    <!-- Search View -->
    <record id="sh_motorcycle_motorcycle_search" model="ir.ui.view">
        <field name="name">sh.motorcycle.motorcycle.search</field>
        <field name="model">motorcycle.motorcycle</field>
        <field name="arch" type="xml">
            <search string="Repuestos">
                <field name="name" string="Repuestos"
                       filter_domain="['|','|','|',('type_id','ilike',self),('make_id','ilike',self),('mmodel_id','ilike',self),('year','ilike',self)]"/>
                <field name="type_id" string="Tipo"/>
                <field name="make_id" string="Marca"/>
                <field name="mmodel_id" string="Modelo"/>
                <field name="year" string="Año"/>
                <field name="market" string="Mercado"/>
                <field name="oem_manual"/>
                <field name="user_manual"/>
                
                <filter name="filter_eur" string="Europa" domain="[('market', '=', 'EUR')]"/>
                <filter name="filter_usa" string="USA" domain="[('market', '=', 'USA')]"/>
                <filter name="filter_arg" string="Argentina" domain="[('market', '=', 'ARG')]"/>
                
                <separator/>
                <filter name="filter_with_services" string="Con Servicios" 
                        domain="[('service_ids', '!=', False)]"/>
                <filter name="filter_with_products" string="Con Productos" 
                        domain="[('product_ids', '!=', False)]"/>
                
                <group expand="0" string="Agrupar por">
                    <filter name="group_make_id" string="Marca" domain="[]" context="{'group_by':'make_id'}"/>
                    <filter name="group_type_id" string="Tipo" domain="[]" context="{'group_by':'type_id'}"/>
                    <filter name="group_mmodel_id" string="Modelo" domain="[]" context="{'group_by':'mmodel_id'}"/>
                    <filter name="group_year" string="Año" domain="[]" context="{'group_by':'year'}"/>
                    <filter name="group_market" string="Mercado" domain="[]" context="{'group_by':'market'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- MenuAction -->
    <record id="sh_motorcycle_motorcycle_action" model="ir.actions.act_window">
        <field name="name">Motocicletas</field>
        <field name="res_model">motorcycle.motorcycle</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                ¡Crea tu primera motocicleta!
            </p>
            <p>
                Gestiona tu catálogo de motocicletas con información técnica completa,
                servicios asociados y control de repuestos compatibles.
            </p>
        </field>
    </record>

    <!-- Menu Item -->
    <menuitem
        id="sh_motorcycle_menuitem_sub"
        sequence="1"
        name="Motocicleta"
        parent="sh_motorcycle_menuitem_root"
        action="sh_motorcycle_motorcycle_action"
        groups="sh_motorcycle_backend.group_sh_motorcycle_user,sh_motorcycle_backend.group_sh_motorcycle_manager"
    />

    <!-- Technical Data Tree View -->
    <record id="view_motorcycle_technical_data_tree" model="ir.ui.view">
        <field name="name">motorcycle.technical.data.tree</field>
        <field name="model">motorcycle.technical.data</field>
        <field name="arch" type="xml">
            <tree string="Especificaciones Técnicas" editable="bottom"
                  decoration-info="category_id"
                  decoration-muted="not value_id"
                  sample="1"
                  default_order="category_id, attribute_id">
                <field name="motorcycle_id" column_invisible="1"/>
                <field name="category_id" widget="badge" options="{'color_field': 'name'}"/>
                <field name="attribute_id"
                    domain="[('categ_ids','=', category_id)]"
                    options="{'no_create': True}"/>
                <field name="value_id"
                       domain="[('attribute_id','=',attribute_id)]"
                       context="{'default_attribute_id': attribute_id}"
                       widget="badge" options="{'color_field': 'name'}"
                />
                <field name="note" widget="text" optional="show"/>
            </tree>
        </field>
    </record>

    <!-- Technical Data Form View -->
    <record id="view_motorcycle_technical_data_form" model="ir.ui.view">
        <field name="name">motorcycle.technical.data.form</field>
        <field name="model">motorcycle.technical.data</field>
        <field name="arch" type="xml">
            <form string="Especificación Técnica">
                <group>
                    <field name="motorcycle_id" invisible="1"/>
                    <field name="category_id"/>
                    <field name="attribute_id"
                        domain="[('categ_ids','=', category_id)]"/>
                    <field name="value_id"
                       domain="[('attribute_id','=',attribute_id)]"
                       context="{'default_attribute_id': attribute_id}"
                />
                    <field name="note"/>
                </group>
            </form>
        </field>
    </record>

    <!-- VISTA KANBAN PARA DATOS TÉCNICOS -->
    <record id="view_motorcycle_technical_data_kanban" model="ir.ui.view">
        <field name="name">motorcycle.technical.data.kanban</field>
        <field name="model">motorcycle.technical.data</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile" default_group_by="category_id">
                <field name="motorcycle_id"/>
                <field name="category_id"/>
                <field name="attribute_id"/>
                <field name="value_id"/>
                <field name="note"/>
                <templates>
                    <t t-name="card">
                        <div class="oe_kanban_card oe_kanban_global_click">
                            <div class="oe_kanban_content">
                                <div class="o_kanban_record_top">
                                    <div class="o_kanban_record_headings">
                                        <strong class="o_kanban_record_title">
                                            <field name="attribute_id"/>
                                        </strong>
                                        <small class="o_kanban_record_subtitle text-muted">
                                            <field name="category_id"/>
                                        </small>
                                    </div>
                                </div>
                                <div class="o_kanban_record_body">
                                    <div class="row">
                                        <div class="col-12">
                                            <span class="badge text-bg-success">
                                                <field name="value_id"/>
                                            </span>
                                        </div>
                                    </div>
                                    <div class="row mt-2" t-if="record.note.raw_value">
                                        <div class="col-12">
                                            <small class="text-muted">
                                                <field name="note"/>
                                            </small>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Action -->
    <record id="action_motorcycle_technical_data" model="ir.actions.act_window">
        <field name="name">Datos Técnicos de Motocicletas</field>
        <field name="res_model">motorcycle.technical.data</field>
        <field name="view_mode">tree,kanban,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                ¡Agrega especificaciones técnicas!
            </p>
            <p>
                Define las características técnicas de cada motocicleta
                organizadas por categorías y atributos específicos.
            </p>
        </field>
    </record>

    <!-- Menu -->
    <menuitem
        id="menu_motorcycle_technical_data"
        name="Datos Técnicos"
        parent="sh_motorcycle_menuitem_config"
        action="action_motorcycle_technical_data"
        sequence="5"
        groups="sh_motorcycle_backend.group_sh_motorcycle_manager"
    />
</odoo>