<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- menuitem -->
    <!-- Motorcycle menuitem root -->
    <menuitem
        id="sh_motorcycle_menuitem_root"
        sequence="1"
        name="Datos de Motos"
        groups="sh_motorcycle_backend.group_sh_motorcycle_user,sh_motorcycle_backend.group_sh_motorcycle_manager"
        web_icon="sh_motorcycle_backend,static/src/img/menu_icon.png"
    />

    <menuitem
        id="sh_motorcycle_menuitem_config"
        sequence="3"
        name="Configuraciones"
        parent="sh_motorcycle_menuitem_root"
        groups="sh_motorcycle_backend.group_sh_motorcycle_manager"
    />

    <!-- Form View -->
    <record id="sh_motorcycle_motorcycle_form" model="ir.ui.view">
        <field name="name">sh.motorcycle.motorcycle</field>
        <field name="model">motorcycle.motorcycle</field>
        <field name="arch" type="xml">
            <form string="Motocicleta">
                <sheet>
                    <div class="oe_title">
                        <label for="name" class="oe_edit_only"/>
                        <h1>
                            <field name="name" placeholder="Nombre de Motocicleta"/>
                        </h1>
                    </div>
                    <!-- Nueva Sección: Imagen -->
                    <group string="Imagen de la Motocicleta">
                        <field name="motorcycle_image" widget="image" options="{'size': [450, 450]}"/>
                    </group>

                    <group>
                        <group>
                            <field name="mmodel_id"/>
                            <field name="year"/>
                            <field name="market"/>
                        </group>
                        <group>
                            <field name="type_id"/>
                            <field name="make_id"/>
                            <field name="company_id" invisible="1"/>
                        </group>
                    </group>

                    <!-- Nueva Sección: Documentos -->
                    <notebook>
                        <page string="Manuales">
                            <group string="Documentos" colspan="2">
                                <group colspan="1">
                                    <field name="oem_manual" filename="oem_manual_filename" widget="pdf_viewer"/>
                                </group>
                                <group colspan="1">
                                    <field name="user_manual" filename="user_manual_filename" widget="pdf_viewer"/>
                                </group>
                            </group>
                        </page>
                        <page string="Servicios asignados">
                            <div style="max-height: 400px; overflow-y: auto; border: 1px solid #ddd; padding: 5px;">
                                <field name="service_ids" mode="kanban,tree,form" context="{}">
                                    <list>
                                        <field name="name"/>
                                        <field name="description"/>
                                    </list>
                                </field>
                            </div>
                        </page>
                    </notebook>

                    <group string="Productos equivalentes">
                        <field name="product_ids">
                            <list editable="bottom">
                                <field name="default_code"/>
                                <field name="name"/>
                                <field name="product_template_attribute_value_ids" widget="many2many_tags"
                                       groups="product.group_product_variant"/>
                                <field name="lst_price"/>
                            </list>
                        </field>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- List View -->
    <record id="sh_motorcycle_motorcycle_tree" model="ir.ui.view">
        <field name="name">sh_motorcycle_motorcycle</field>
        <field name="model">motorcycle.motorcycle</field>
        <field name="arch" type="xml">
            <list string="Motocicletas">
                <field name="name"/>
                <field name="type_id"/>
                <field name="make_id"/>
                <field name="mmodel_id"/>
                <field name="year"/>
                <field name="market"/>
                <field name="motorcycle_image" filename="motorcycle image" widget="image"
                       options="{'size': [180, 180]}"/>
            </list>
        </field>
    </record>

    <!-- Search View -->
    <record id="sh_motorcycle_motorcycle_search" model="ir.ui.view">
        <field name="name">sh.motorcycle.motorcycle.search</field>
        <field name="model">motorcycle.motorcycle</field>
        <field name="arch" type="xml">
            <search string="Repuestos">
                <field name="name" string="Repuestos"
                       filter_domain="['|','|','|',('type_id','ilike',self),('make_id','ilike',self),('mmodel_id','ilike',self),('year','ilike',self)]"/>
                <field name="type_id" string="Tipo"/>
                <field name="make_id" string="Marca"/>
                <field name="mmodel_id" string="Modelo"/>
                <field name="year" string="Año"/>
                <field name="market" string="Mercado"/>
                <field name="oem_manual"/> <!-- Permite buscar por manual OEM -->
                <field name="user_manual"/> <!-- Permite buscar por manual de usuario -->
                <group expand="0" string="Agrupar por">
                    <filter name="group_make_id" string="Marca" domain="[]" context="{'group_by':'make_id'}"/>
                    <filter name="group_type_id" string="Tipo" domain="[]" context="{'group_by':'type_id'}"/>
                    <filter name="group_mmodel_id" string="Modelo" domain="[]" context="{'group_by':'mmodel_id'}"/>
                    <filter name="group_year" string="Año" domain="[]" context="{'group_by':'year'}"/>
                    <filter name="group_market" string="Mercado" domain="[]" context="{'group_by':'market'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- MenuAction -->
    <record id="sh_motorcycle_motorcycle_action" model="ir.actions.act_window">
        <field name="name">Motocicleta</field>
        <field name="res_model">motorcycle.motorcycle</field>
        <field name="view_mode">list,form</field>
    </record>

    <!-- Menu Item -->
    <menuitem
        id="sh_motorcycle_menuitem_sub"
        sequence="1"
        name="Motocicleta"
        parent="sh_motorcycle_menuitem_root"
        action="sh_motorcycle_motorcycle_action"
        groups="sh_motorcycle_backend.group_sh_motorcycle_user,sh_motorcycle_backend.group_sh_motorcycle_manager"
    />

    <!-- Technical Data Tree View -->
    <record id="view_motorcycle_technical_data_tree" model="ir.ui.view">
        <field name="name">motorcycle.technical.data.tree</field>
        <field name="model">motorcycle.technical.data</field>
        <field name="arch" type="xml">
            <list string="Especificaciones Técnicas" editable="bottom">
                <field name="motorcycle_id" invisible="1"/>
                <field name="category_id"/>
                <field name="attribute_id"
                    domain="[('categ_ids','=', category_id)]"/>
                <field name="value_id"
                    domain="[('attribute_id','=', attribute_id)]"/>

                <field name="note"/>
            </list>
        </field>
    </record>

    <!-- Technical Data Form View -->
    <record id="view_motorcycle_technical_data_form" model="ir.ui.view">
        <field name="name">motorcycle.technical.data.form</field>
        <field name="model">motorcycle.technical.data</field>
        <field name="arch" type="xml">
            <form string="Especificación Técnica">
                <group>
                    <field name="motorcycle_id" invisible="1"/>
                    <field name="category_id"/>
                    <field name="attribute_id"
                        domain="[('categ_ids','=', category_id)]"/>
                    <field name="value_id"
                        domain="[('attribute_id','=', attribute_id)]"/>
                    <field name="note"/>
                </group>
            </form>
        </field>
    </record>

    <!-- Action -->
    <record id="action_motorcycle_technical_data" model="ir.actions.act_window">
        <field name="name">Datos Técnicos de la Motocicleta</field>
        <field name="res_model">motorcycle.technical.data</field>
        <field name="view_mode">list,form</field>
    </record>

    <!-- Menu -->
    <menuitem
        id="menu_motorcycle_technical_data"
        name="Datos Técnicos"
        parent="sh_motorcycle_menuitem_config"
        action="action_motorcycle_technical_data"
        sequence="5"
        groups="sh_motorcycle_backend.group_sh_motorcycle_manager"
    />

    <!-- Agregado 21-06-2025: Herencia para Datos Técnicos -->
    <record id="sh_motorcycle_motorcycle_form_inherit_technical_data" model="ir.ui.view">
        <field name="name">sh.motorcycle.motorcycle.form.technical.data</field>
        <field name="model">motorcycle.motorcycle</field>
        <field name="inherit_id" ref="sh_motorcycle_backend.sh_motorcycle_motorcycle_form"/>
        <field name="arch" type="xml">
            <xpath expr="//notebook" position="inside">
                <page string="Datos Técnicos">
                    <field name="technical_data_ids"
                           widget="one2many_list"
                           views="[(ref('sh_motorcycle_backend.view_motorcycle_technical_data_tree'), 'tree'),
                                   (ref('sh_motorcycle_backend.view_motorcycle_technical_data_form'), 'form')]"/>
                </page>
            </xpath>
        </field>
    </record>
    <!-- Fin herencia Datos Técnicos -->
</odoo>
