<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- List View -->
    <record id="sh_motorcycle_year_tree" model="ir.ui.view">
        <field name="name">sh.motorcycle.year.list</field>
        <field name="model">motorcycle.year</field>
        <field name="arch" type="xml">
            <list string="Años de Motocicleta" editable="bottom">
                <field name="year"/>
            </list>
        </field>
    </record>

    <!-- Action -->
    <record id="sh_motorcycle_year_action" model="ir.actions.act_window">
        <field name="name">Años</field>
        <field name="res_model">motorcycle.year</field>
        <field name="view_mode">list</field>
    </record>

    <!-- Menu Item -->
    <menuitem
        id="sh_motorcycle_year_menuitem"
        name="Años"
        parent="sh_motorcycle_menuitem_config"
        action="sh_motorcycle_year_action"
        sequence="4"/>
</odoo>