<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Form View -->
    <record id="sh_motorcycle_mmodel_form" model="ir.ui.view">
        <field name="name">sh.motorcycle.mmodel.form</field>
        <field name="model">motorcycle.mmodel</field>
        <field name="arch" type="xml">
            <form string="Modelo de Motocicleta">
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="make_id"/>
                            <field name="type_id"/>
                            <field name="company_id" invisible="1"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- List View -->
    <record id="sh_motorcycle_mmodel_tree" model="ir.ui.view">
        <field name="name">sh.motorcycle.mmodel.list</field>
        <field name="model">motorcycle.mmodel</field>
        <field name="arch" type="xml">
            <list string="Modelos de Motocicleta">
                <field name="name"/>
                <field name="make_id"/>
                <field name="type_id"/>
            </list>
        </field>
    </record>

    <!-- Search View -->
    <record id="sh_motorcycle_mmodel_search" model="ir.ui.view">
        <field name="name">sh.motorcycle.mmodel.search</field>
        <field name="model">motorcycle.mmodel</field>
        <field name="arch" type="xml">
            <search string="Modelo">
                <field name="name"
                       string="Modelo"
                       filter_domain="['|','|',('name','ilike',self),('make_id','ilike',self),('type_id','ilike',self)]"/>
                <field name="make_id" string="Marca"/>
                <field name="type_id" string="Tipo"/>

                <group expand="0" string="Agrupar por">
                    <filter name="group_model"
                            string="Modelo"
                            domain="[]"
                            context="{'group_by':'name'}"/>
                    <filter name="group_make_id"
                            string="Marca"
                            domain="[]"
                            context="{'group_by':'make_id'}"/>
                    <filter name="group_type_id"
                            string="Tipo"
                            domain="[]"
                            context="{'group_by':'type_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Action -->
    <record id="sh_motorcycle_mmodel_action" model="ir.actions.act_window">
        <field name="name">Modelos</field>
        <field name="res_model">motorcycle.mmodel</field>
        <field name="view_mode">list,form</field>
    </record>

    <!-- Menu Item -->
    <menuitem id="sh_motorcycle_mmodel_menuitem"
              name="Modelos"
              parent="sh_motorcycle_menuitem_config"
              action="sh_motorcycle_mmodel_action"
              sequence="3"/>
</odoo>