<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- List View -->
    <record id="sh_motorcycle_make_tree" model="ir.ui.view">
        <field name="name">sh.motorcycle.make.list</field>
        <field name="model">motorcycle.make</field>
        <field name="arch" type="xml">
            <list string="Marcas de Motocicleta" editable="bottom">
                <field name="name"/>
                <field name="company_id" column_invisible="True"/>
            </list>
        </field>
    </record>

    <!-- Action -->
    <record id="sh_motorcycle_make_action" model="ir.actions.act_window">
        <field name="name">Marcas</field>
        <field name="res_model">motorcycle.make</field>
        <field name="view_mode">list,form</field>
    </record>

    <!-- Make menuitem -->
    <menuitem
        id="sh_motorcycle_make_menuitem"
        action="sh_motorcycle_make_action"
        parent="sh_motorcycle_menuitem_config"
        sequence="2"
        name="Marcas"/>
</odoo>