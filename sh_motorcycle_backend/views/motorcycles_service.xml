<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="action_motorcycle_service" model="ir.actions.act_window">
        <field name="name">Servicios de Motocicletas</field>
        <field name="res_model">motorcycle.service</field>
        <field name="view_mode">kanban,list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                ¬°Crea tu primer servicio de motocicleta!
            </p>
            <p>
                Los servicios t√©cnicos te permiten:
            </p>
            <ul style="text-align: left; display: inline-block;">
                <li>üîß Gestionar m√∫ltiples motocicletas en un solo servicio</li>
                <li>üìã Crear listas detalladas de repuestos y mano de obra</li>
                <li>‚úÖ Seguir el progreso con workflow visual</li>
                <li>üí∞ Calcular costos autom√°ticamente</li>
            </ul>
        </field>
    </record>

    <!-- VISTA KANBAN PARA SERVICIOS -->
    <record id="view_motorcycle_service_kanban" model="ir.ui.view">
        <field name="name">motorcycle.service.kanban</field>
        <field name="model">motorcycle.service</field>
        <field name="arch" type="xml">
            <kanban default_group_by="total_service_cost" class="o_kanban_mobile">
                <field name="name"/>
                <field name="motorcycle_ids"/>
                <field name="total_service_cost"/>
                <field name="total_parts_cost"/>
                <field name="total_services_cost"/>
                <field name="currency_id"/>
                <field name="description"/>
                <templates>
                    <t t-name="card">
                        <div class="oe_kanban_card oe_kanban_global_click">
                            <div class="o_kanban_content">
                                <div class="o_kanban_record_top">
                                    <div class="o_kanban_record_headings">
                                        <strong class="o_kanban_record_title">
                                            <field name="name"/>
                                        </strong>
                                        <div class="o_kanban_record_subtitle">
                                            <field name="description"/>
                                        </div>
                                    </div>
                                    <div class="o_kanban_manage_button_section">
                                        <span class="badge text-bg-primary">
                                            <i class="fa fa-motorcycle"/> 
                                            <t t-esc="record.motorcycle_ids.raw_value.length"/> motos
                                        </span>
                                    </div>
                                </div>
                                
                                <div class="o_kanban_record_body">
                                    <div class="row">
                                        <div class="col-6">
                                            <small class="text-muted">Repuestos:</small><br/>
                                            <strong>
                                                <field name="total_parts_cost" widget="monetary" 
                                                       options="{'currency_field': 'currency_id'}"/>
                                            </strong>
                                        </div>
                                        <div class="col-6">
                                            <small class="text-muted">Mano de Obra:</small><br/>
                                            <strong>
                                                <field name="total_services_cost" widget="monetary" 
                                                       options="{'currency_field': 'currency_id'}"/>
                                            </strong>
                                        </div>
                                    </div>
                                </div>
                                
                                <div class="o_kanban_record_bottom">
                                    <div class="d-flex justify-content-between align-items-center">
                                        <span class="badge text-bg-success">
                                            Total: <field name="total_service_cost" widget="monetary" 
                                                         options="{'currency_field': 'currency_id'}"/>
                                        </span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <menuitem id="menu_motorcycle_service_root"
              name="Servicios de Motos"
              parent="sh_motorcycle_menuitem_root"
              sequence="25"
              action="action_motorcycle_service"/>

    <record id="view_motorcycle_service_list" model="ir.ui.view">
        <field name="name">motorcycle.service.list</field>
        <field name="model">motorcycle.service</field>
        <field name="arch" type="xml">
            <list string="Servicios de Motocicleta" 
                  decoration-info="total_service_cost &gt; 100000"
                  decoration-success="total_service_cost &lt; 50000"
                  sample="1"
                  multi_edit="1">
                <field name="name"/>
                <field name="motorcycle_ids" widget="many2many_tags" 
                       options="{'color_field': 'make_id', 'no_create': True, 'limit': 3}"/>
                <field name="description" optional="show"/>
                <field name="currency_id" column_invisible="1"/>
                <field name="total_parts_cost" widget="monetary" 
                       options="{'currency_field': 'currency_id'}" optional="show"/>
                <field name="total_services_cost" widget="monetary" 
                       options="{'currency_field': 'currency_id'}" optional="show"/>
                <field name="total_service_cost" widget="monetary" 
                       options="{'currency_field': 'currency_id'}" 
                       decoration-bf="1"/>
            </list>
        </field>
    </record>

    <record id="view_motorcycle_service_form" model="ir.ui.view">
        <field name="name">motorcycle.service.form</field>
        <field name="model">motorcycle.service</field>
        <field name="arch" type="xml">
            <form string="Servicio de Motocicleta">
                <header>
                    <!-- Botones de acci√≥n -->
                    <button name="action_print_service_report" string="Imprimir Reporte" 
                            type="object" class="btn-primary" icon="fa-print"/>
                    <button name="create_workflow_template" string="Crear Plantilla Workflow" 
                            type="object" class="btn-secondary" icon="fa-magic"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_motorcycles" type="object" 
                                class="oe_stat_button" icon="fa-motorcycle">
                            <div class="o_field_widget o_stat_info">
                                <span class="o_stat_value">
                                    <field name="motorcycle_ids" widget="statinfo"/>
                                </span>
                                <span class="o_stat_text">Motocicletas</span>
                            </div>
                        </button>
                        <button name="action_view_service_lines" type="object" 
                                class="oe_stat_button" icon="fa-list">
                            <div class="o_field_widget o_stat_info">
                                <span class="o_stat_value">
                                    <field name="service_line_ids" widget="statinfo"/>
                                </span>
                                <span class="o_stat_text">L√≠neas</span>
                            </div>
                        </button>
                    </div>

                    <div class="oe_title">
                        <label for="name" class="oe_edit_only"/>
                        <h1>
                            <field name="name" placeholder="N√∫mero de Servicio"/>
                        </h1>
                    </div>

                    <!-- Informaci√≥n principal dividida -->
                    <group>
                        <group string="Informaci√≥n del Servicio">
                            <field name="description" placeholder="Descripci√≥n del servicio t√©cnico..."/>
                            <field name="labor_description" placeholder="Detalles espec√≠ficos del trabajo..."/>
                            <field name="currency_id" column_invisible="1"/>
                        </group>
                        <group string="Resumen de Costos">
                            <field name="total_parts_cost" widget="monetary" 
                                   options="{'currency_field': 'currency_id'}" readonly="1"/>
                            <field name="total_services_cost" widget="monetary" 
                                   options="{'currency_field': 'currency_id'}" readonly="1"/>
                            <field name="total_service_cost" widget="monetary" 
                                   options="{'currency_field': 'currency_id'}" readonly="1"
                                   class="oe_subtotal_footer_separator"/>
                        </group>
                    </group>

                    <!-- Motocicletas en secci√≥n separada -->
                    <group string="üèçÔ∏è Motocicletas Asignadas" colspan="2">
                        <div class="alert alert-info" style="margin-bottom: 10px;">
                            <strong><i class="fa fa-info-circle"/> Selecci√≥n:</strong> 
                            Selecciona todas las motocicletas que requieren este servicio t√©cnico.
                        </div>
                        <field name="motorcycle_ids" widget="many2many" 
                               options="{'no_create': True}"
                               mode="kanban">
                            <kanban>
                                <field name="name"/>
                                <field name="make_id"/>
                                <field name="mmodel_id"/>
                                <field name="year"/>
                                <field name="market"/>
                                <templates>
                                    <t t-name="card">
                                        <div class="oe_kanban_card" style="margin: 2px; min-height: 40px; max-width: 200px;">
                                            <div class="oe_kanban_content" style="padding: 4px 8px;">
                                                <div style="font-weight: bold; font-size: 11px; line-height: 1.2;">
                                                    <field name="make_id"/> <field name="mmodel_id"/>
                                                </div>
                                                <div style="font-size: 9px; color: #666; line-height: 1;">
                                                    <field name="year"/> ‚Ä¢ <field name="market"/>
                                                </div>
                                            </div>
                                        </div>
                                    </t>
                                </templates>
                            </kanban>
                        </field>
                    </group>

                    <notebook>
                        <page string="üìã L√≠neas del Servicio" icon="fa-list">
                            <div class="alert alert-warning" style="margin-bottom: 15px;">
                                <strong><i class="fa fa-cog"/> Componentes:</strong> 
                                Agrega productos (repuestos) y servicios (mano de obra) necesarios.
                            </div>
                            <field name="service_line_ids"
                                   context="{'default_display_type': 'line'}"
                                   options="{'no_create': False}">
                                <list string="L√≠neas del Servicio" editable="bottom"
                                      decoration-info="product_id and product_id.type == 'service'"
                                      decoration-success="product_id and product_id.type == 'consu'">
                                    <field name="sequence" widget="handle"/>
                                    <field name="product_id" 
                                           domain="['|', ('type', '=', 'service'), ('type', '=', 'consu')]"
                                           options="{'no_create': True}"/>
                                    <field name="name" required="1"/>
                                    <field name="quantity"/>
                                    <field name="price_unit"/>
                                    <field name="subtotal" readonly="1"/>
                                </list>
                            </field>
                        </page>
                        
                        <page string="üîß Workflow del Servicio" icon="fa-sitemap">
                            <!-- Header del Workflow -->
                            <div class="workflow-header" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); color: white; padding: 20px; border-radius: 8px; margin-bottom: 20px;">
                                <div class="row align-items-center">
                                    <div class="col-8">
                                        <h3 style="margin: 0; color: white;"><i class="fa fa-sitemap"/> Proceso del Servicio</h3>
                                        <p style="margin: 5px 0 0 0; opacity: 0.9;">Gestiona el flujo operativo paso a paso</p>
                                    </div>
                                    <div class="col-4 text-end">
                                        <button name="create_workflow_template" type="object" 
                                                string="Crear Plantilla" 
                                                class="btn btn-light btn-sm" icon="fa-magic"/>
                                    </div>
                                </div>
                            </div>

                            <!-- Vista de Workflow como Kanban -->
                            <field name="step_ids" mode="kanban" options="{'no_create': False}">
                                <kanban default_group_by="step_type" class="o_kanban_small_column" 
                                        on_create="quick_create" quick_create_view="view_motorcycle_service_step_form_quick">
                                    <field name="name"/>
                                    <field name="step_type"/>
                                    <field name="is_done"/>
                                    <field name="note"/>
                                    <field name="sequence"/>
                                    <field name="step_icon"/>
                                    <field name="step_color"/>
                                    <field name="decision_question"/>
                                    <field name="next_step_id"/>
                                    <field name="next_step_yes_id"/>
                                    <field name="next_step_no_id"/>
                                    <field name="position_x"/>
                                    <field name="position_y"/>
                                    <templates>
                                        <t t-name="card">
                                            <div class="oe_kanban_card workflow-step-card" 
                                                 t-att-class="record.is_done.raw_value ? 'step-completed' : 'step-pending'"
                                                 style="margin: 8px; border-radius: 12px; box-shadow: 0 2px 8px rgba(0,0,0,0.1); 
                                                        border-left: 4px solid" 
                                                 t-att-style="'border-left-color: ' + record.step_color.raw_value + ';'">
                                                
                                                <div class="oe_kanban_content" style="padding: 12px;">
                                                    <!-- Header con √≠cono -->
                                                    <div class="d-flex align-items-center mb-2">
                                                        <div class="step-type-icon me-2" 
                                                             t-att-style="'color: ' + record.step_color.raw_value + ';'">
                                                            <i t-att-class="'fa ' + record.step_icon.raw_value" 
                                                               style="font-size: 18px;"></i>
                                                        </div>
                                                        <div class="step-number badge text-bg-secondary" 
                                                             style="font-size: 10px;">
                                                            <t t-esc="record.sequence.raw_value"/>
                                                        </div>
                                                        <div class="ms-auto">
                                                            <span class="badge text-bg-light" style="font-size: 9px;">
                                                                <t t-if="record.step_type.raw_value == 'action'">‚öôÔ∏è</t>
                                                                <t t-if="record.step_type.raw_value == 'decision'">‚ùì</t>
                                                                <t t-if="record.step_type.raw_value == 'start'">‚ñ∂Ô∏è</t>
                                                                <t t-if="record.step_type.raw_value == 'end'">‚èπÔ∏è</t>
                                                            </span>
                                                        </div>
                                                    </div>
                                                    
                                                    <!-- Contenido del paso -->
                                                    <div class="step-content">
                                                        <div class="step-title" style="font-weight: 600; font-size: 12px; margin-bottom: 6px;">
                                                            <field name="name"/>
                                                        </div>
                                                        
                                                        <!-- Pregunta de decisi√≥n -->
                                                        <div t-if="record.step_type.raw_value == 'decision' and record.decision_question.raw_value" 
                                                             class="decision-question" style="font-size: 10px; color: #f57c00; margin-bottom: 4px; font-style: italic;">
                                                            <i class="fa fa-question-circle me-1"></i>
                                                            <field name="decision_question"/>
                                                        </div>
                                                        
                                                        <div class="step-note" style="font-size: 10px; color: #6c757d;" t-if="record.note.raw_value">
                                                            <i class="fa fa-sticky-note-o me-1"></i>
                                                            <field name="note"/>
                                                        </div>
                                                    </div>
                                                    
                                                    <!-- Conexiones -->
                                                    <div class="workflow-connections" style="margin-top: 8px; padding-top: 8px; border-top: 1px solid #e9ecef;">
                                                        <!-- Conexi√≥n normal -->
                                                        <div t-if="record.step_type.raw_value != 'decision' and record.next_step_id.raw_value" 
                                                             style="font-size: 9px; color: #28a745;">
                                                            <i class="fa fa-arrow-right me-1"></i>Siguiente: 
                                                            <field name="next_step_id"/>
                                                        </div>
                                                        
                                                        <!-- Conexiones de decisi√≥n -->
                                                        <div t-if="record.step_type.raw_value == 'decision'">
                                                            <div t-if="record.next_step_yes_id.raw_value" style="font-size: 9px; color: #28a745;">
                                                                <i class="fa fa-check me-1"></i>S√ç: <field name="next_step_yes_id"/>
                                                            </div>
                                                            <div t-if="record.next_step_no_id.raw_value" style="font-size: 9px; color: #dc3545;">
                                                                <i class="fa fa-times me-1"></i>NO: <field name="next_step_no_id"/>
                                                            </div>
                                                        </div>
                                                    </div>
                                                    
                                                    <!-- Footer con toggle -->
                                                    <div class="step-footer mt-2 pt-2" style="border-top: 1px solid #e9ecef;">
                                                        <div class="d-flex justify-content-between align-items-center">
                                                            <small class="text-muted" style="font-size: 9px;">
                                                                <t t-if="record.is_done.raw_value">‚úÖ Completado</t>
                                                                <t t-else="">‚è≥ Pendiente</t>
                                                            </small>
                                                            <field name="is_done" widget="boolean_toggle" 
                                                                   options="{'terminology': 'switch'}"
                                                                   style="transform: scale(0.7);"/>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </t>
                                    </templates>
                                </kanban>
                            </field>
                            
                            <!-- Leyenda del Workflow -->
                            <div class="workflow-legend mt-4" style="background: white; padding: 15px; border-radius: 6px; border: 1px solid #dee2e6;">
                                <div class="row text-center">
                                    <div class="col-3">
                                        <div class="legend-item">
                                            <i class="fa fa-play-circle" style="color: #007bff; font-size: 16px;"></i>
                                            <div style="font-size: 11px; margin-top: 4px;"><strong>Inicio</strong></div>
                                            <div style="font-size: 9px; color: #6c757d;">Punto de partida</div>
                                        </div>
                                    </div>
                                    <div class="col-3">
                                        <div class="legend-item">
                                            <i class="fa fa-cog" style="color: #28a745; font-size: 16px;"></i>
                                            <div style="font-size: 11px; margin-top: 4px;"><strong>Acci√≥n</strong></div>
                                            <div style="font-size: 9px; color: #6c757d;">Paso operativo</div>
                                        </div>
                                    </div>
                                    <div class="col-3">
                                        <div class="legend-item">
                                            <i class="fa fa-question-circle" style="color: #ffc107; font-size: 16px;"></i>
                                            <div style="font-size: 11px; margin-top: 4px;"><strong>Decisi√≥n</strong></div>
                                            <div style="font-size: 9px; color: #6c757d;">Punto de decisi√≥n</div>
                                        </div>
                                    </div>
                                    <div class="col-3">
                                        <div class="legend-item">
                                            <i class="fa fa-stop-circle" style="color: #dc3545; font-size: 16px;"></i>
                                            <div style="font-size: 11px; margin-top: 4px;"><strong>Fin</strong></div>
                                            <div style="font-size: 9px; color: #6c757d;">Punto final</div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Vista r√°pida para crear pasos del servicio -->
    <record id="view_motorcycle_service_step_form_quick" model="ir.ui.view">
        <field name="name">motorcycle.service.step.form.quick</field>
        <field name="model">motorcycle.service.step</field>
        <field name="arch" type="xml">
            <form string="Nuevo Paso del Workflow">
                <group>
                    <group>
                        <field name="step_type" widget="selection"/>
                        <field name="sequence" column_invisible="1"/>
                        <field name="name" placeholder="Ej: Cambiar aceite del motor" required="1"/>
                    </group>
                    <group>
                        <field name="decision_question" 
                               placeholder="¬øQu√© pregunta necesita responderse?"
                               invisible="step_type != 'decision'"
                               required="step_type == 'decision'"/>
                        <field name="note" placeholder="Instrucciones espec√≠ficas..." widget="text"/>
                    </group>
                </group>
                
                <!-- Secci√≥n de conexiones -->
                <group string="Conexiones del Flujo" invisible="step_type in ['start', 'end']">
                    <group invisible="step_type == 'decision'">
                        <field name="next_step_id" 
                               domain="[('service_id', '=', parent.service_id), ('id', '!=', id)]"
                               options="{'no_create': True}"/>
                    </group>
                    <group invisible="step_type != 'decision'" colspan="2">
                        <field name="next_step_yes_id" 
                               string="Si la respuesta es S√ç"
                               domain="[('service_id', '=', parent.service_id), ('id', '!=', id)]"
                               options="{'no_create': True}"/>
                        <field name="next_step_no_id" 
                               string="Si la respuesta es NO"
                               domain="[('service_id', '=', parent.service_id), ('id', '!=', id)]"
                               options="{'no_create': True}"/>
                    </group>
                </group>
            </form>
        </field>
    </record>

    <!-- Vista de formulario completa para editar pasos -->
    <record id="view_motorcycle_service_step_form" model="ir.ui.view">
        <field name="name">motorcycle.service.step.form</field>
        <field name="model">motorcycle.service.step</field>
        <field name="arch" type="xml">
            <form string="Paso del Workflow">
                <header>
                    <field name="is_done" widget="boolean_toggle" options="{'terminology': 'archive'}"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <label for="name" class="oe_edit_only"/>
                        <h1>
                            <field name="name" placeholder="Descripci√≥n del paso"/>
                        </h1>
                    </div>
                    
                    <group>
                        <group string="Configuraci√≥n del Paso">
                            <field name="step_type"/>
                            <field name="sequence"/>
                            <field name="decision_question" 
                                   invisible="step_type != 'decision'"
                                   required="step_type == 'decision'"/>
                        </group>
                        <group string="Posici√≥n y Display">
                            <field name="position_x"/>
                            <field name="position_y"/>
                            <field name="step_icon" readonly="1"/>
                            <field name="step_color" readonly="1"/>
                        </group>
                    </group>

                    <group string="Documentaci√≥n" colspan="2">
                        <field name="note" widget="text"/>
                        <field name="pdf_file" filename="pdf_filename" widget="pdf_viewer"/>
                    </group>

                    <notebook>
                        <page string="Flujo de Conexiones" icon="fa-share-alt">
                            <div class="alert alert-info">
                                <strong>Conexiones:</strong> Define c√≥mo contin√∫a el flujo despu√©s de este paso.
                            </div>
                            <group invisible="step_type == 'decision'">
                                <field name="next_step_id" 
                                       domain="[('service_id', '=', service_id), ('id', '!=', id)]"
                                       options="{'no_create': True}"/>
                            </group>
                            <group invisible="step_type != 'decision'" string="Rutas de Decisi√≥n">
                                <field name="next_step_yes_id" 
                                       string="Ruta S√ç"
                                       domain="[('service_id', '=', service_id), ('id', '!=', id)]"
                                       options="{'no_create': True}"/>
                                <field name="next_step_no_id" 
                                       string="Ruta NO"
                                       domain="[('service_id', '=', service_id), ('id', '!=', id)]"
                                       options="{'no_create': True}"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_motorcycle_service_step_list" model="ir.ui.view">
        <field name="name">motorcycle.service.step.list</field>
        <field name="model">motorcycle.service.step</field>
        <field name="arch" type="xml">
            <list string="Pasos del Servicio">
                <field name="sequence" widget="handle"/>
                <field name="step_type"/>
                <field name="name"/>
                <field name="is_done"/>
                <field name="note"/>
                <field name="pdf_file" filename="pdf_filename" widget="pdf_viewer"/>
            </list>
        </field>
    </record>

    <record id="view_motorcycle_service_line_tree" model="ir.ui.view">
        <field name="name">motorcycle.service.line.tree</field>
        <field name="model">motorcycle.service.line</field>
        <field name="arch" type="xml">
            <list string="L√≠neas del Servicio" editable="bottom">
                <field name="sequence" widget="handle"/>
                <field name="product_id"/>
                <field name="name"/>
                <field name="quantity"/>
                <field name="price_unit"/>
                <field name="subtotal"/>
            </list>
        </field>
    </record>
</odoo>