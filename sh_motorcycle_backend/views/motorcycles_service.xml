<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="action_motorcycle_service" model="ir.actions.act_window">
        <field name="name">Servicios de Motocicletas</field>
        <field name="res_model">motorcycle.service</field>
        <field name="view_mode">kanban,list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                ¡Crea tu primer servicio de motocicleta!
            </p>
            <p>
                Los servicios técnicos te permiten:
            </p>
            <ul style="text-align: left; display: inline-block;">
                <li>🔧 Gestionar múltiples motocicletas en un solo servicio</li>
                <li>📋 Crear listas detalladas de repuestos y mano de obra</li>
                <li>✅ Seguir el progreso con checklists operativos</li>
                <li>💰 Calcular costos automáticamente</li>
            </ul>
        </field>
    </record>

    <!-- VISTA KANBAN PARA SERVICIOS -->
    <record id="view_motorcycle_service_kanban" model="ir.ui.view">
        <field name="name">motorcycle.service.kanban</field>
        <field name="model">motorcycle.service</field>
        <field name="arch" type="xml">
            <kanban default_group_by="total_service_cost" class="o_kanban_mobile">
                <field name="name"/>
                <field name="motorcycle_ids"/>
                <field name="total_service_cost"/>
                <field name="total_parts_cost"/>
                <field name="total_services_cost"/>
                <field name="currency_id"/>
                <field name="description"/>
                <templates>
                    <t t-name="card">
                        <div class="oe_kanban_card oe_kanban_global_click">
                            <div class="o_kanban_content">
                                <div class="o_kanban_record_top">
                                    <div class="o_kanban_record_headings">
                                        <strong class="o_kanban_record_title">
                                            <field name="name"/>
                                        </strong>
                                        <div class="o_kanban_record_subtitle">
                                            <field name="description"/>
                                        </div>
                                    </div>
                                    <div class="o_kanban_manage_button_section">
                                        <span class="badge text-bg-primary">
                                            <i class="fa fa-motorcycle"/> 
                                            <t t-esc="record.motorcycle_ids.raw_value.length"/> motos
                                        </span>
                                    </div>
                                </div>
                                
                                <div class="o_kanban_record_body">
                                    <div class="row">
                                        <div class="col-6">
                                            <small class="text-muted">Repuestos:</small><br/>
                                            <strong>
                                                <field name="total_parts_cost" widget="monetary" 
                                                       options="{'currency_field': 'currency_id'}"/>
                                            </strong>
                                        </div>
                                        <div class="col-6">
                                            <small class="text-muted">Mano de Obra:</small><br/>
                                            <strong>
                                                <field name="total_services_cost" widget="monetary" 
                                                       options="{'currency_field': 'currency_id'}"/>
                                            </strong>
                                        </div>
                                    </div>
                                </div>
                                
                                <div class="o_kanban_record_bottom">
                                    <div class="d-flex justify-content-between align-items-center">
                                        <span class="badge text-bg-success">
                                            Total: <field name="total_service_cost" widget="monetary" 
                                                         options="{'currency_field': 'currency_id'}"/>
                                        </span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <menuitem id="menu_motorcycle_service_root"
              name="Servicios de Motos"
              parent="sh_motorcycle_menuitem_root"
              sequence="25"
              action="action_motorcycle_service"/>

    <record id="view_motorcycle_service_list" model="ir.ui.view">
        <field name="name">motorcycle.service.list</field>
        <field name="model">motorcycle.service</field>
        <field name="arch" type="xml">
            <list string="Servicios de Motocicleta" 
                  decoration-info="total_service_cost &gt; 100000"
                  decoration-success="total_service_cost &lt; 50000"
                  sample="1"
                  multi_edit="1">
                <field name="name"/>
                <field name="motorcycle_ids" widget="many2many_tags" 
                       options="{'color_field': 'make_id', 'no_create': True, 'limit': 3}"/>
                <field name="description" optional="show"/>
                <field name="currency_id" column_invisible="1"/>
                <field name="total_parts_cost" widget="monetary" 
                       options="{'currency_field': 'currency_id'}" optional="show"/>
                <field name="total_services_cost" widget="monetary" 
                       options="{'currency_field': 'currency_id'}" optional="show"/>
                <field name="total_service_cost" widget="monetary" 
                       options="{'currency_field': 'currency_id'}" 
                       decoration-bf="1"/>
                       
            </list>
        </field>
    </record>

    <record id="view_motorcycle_service_form" model="ir.ui.view">
        <field name="name">motorcycle.service.form</field>
        <field name="model">motorcycle.service</field>
        <field name="arch" type="xml">
            <form string="Servicio de Motocicleta">
                <header>
                    <!-- Botones de acción -->
                    <button name="action_print_service_report" string="Imprimir Reporte" 
                            type="object" class="btn-primary" icon="fa-print"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_motorcycles" type="object" 
                                class="oe_stat_button" icon="fa-motorcycle">
                            <div class="o_field_widget o_stat_info">
                                <span class="o_stat_value">
                                    <field name="motorcycle_ids" widget="statinfo"/>
                                </span>
                                <span class="o_stat_text">Motocicletas</span>
                            </div>
                        </button>
                        <button name="action_view_service_lines" type="object" 
                                class="oe_stat_button" icon="fa-list">
                            <div class="o_field_widget o_stat_info">
                                <span class="o_stat_value">
                                    <field name="service_line_ids" widget="statinfo"/>
                                </span>
                                <span class="o_stat_text">Líneas</span>
                            </div>
                        </button>
                    </div>

                    <div class="oe_title">
                        <label for="name" class="oe_edit_only"/>
                        <h1>
                            <field name="name" placeholder="Número de Servicio"/>
                        </h1>
                    </div>

                    <!-- Información principal dividida -->
                    <group>
                        <group string="Información del Servicio">
                            <field name="description" placeholder="Descripción del servicio técnico..."/>
                            <field name="labor_description" placeholder="Detalles específicos del trabajo..."/>
                            <field name="currency_id" invisible="1"/>
                        </group>
                        <group string="Resumen de Costos">
                            <field name="total_parts_cost" widget="monetary" 
                                   options="{'currency_field': 'currency_id'}" readonly="1"/>
                            <field name="total_services_cost" widget="monetary" 
                                   options="{'currency_field': 'currency_id'}" readonly="1"/>
                            <field name="total_service_cost" widget="monetary" 
                                   options="{'currency_field': 'currency_id'}" readonly="1"
                                   class="oe_subtotal_footer_separator"/>
                        </group>
                    </group>

                    <!-- Motocicletas en sección separada -->
                    <group string="🏍️ Motocicletas Asignadas" colspan="2">
                        <div class="alert alert-info" style="margin-bottom: 10px;">
                            <strong><i class="fa fa-info-circle"/> Selección:</strong> 
                            Selecciona todas las motocicletas que requieren este servicio técnico.
                        </div>
                        <field name="motorcycle_ids" widget="many2many" 
                               options="{'no_create': True}"
                               mode="kanban">
                            <kanban>
                                <field name="name"/>
                                <field name="make_id"/>
                                <field name="mmodel_id"/>
                                <field name="year"/>
                                <field name="market"/>
                                <templates>
                                    <t t-name="card">
                                        <div class="oe_kanban_card" style="margin: 2px; min-height: 40px; max-width: 200px;">
                                            <div class="oe_kanban_content" style="padding: 4px 8px;">
                                                <div style="font-weight: bold; font-size: 11px; line-height: 1.2;">
                                                    <field name="make_id"/> <field name="mmodel_id"/>
                                                </div>
                                                <div style="font-size: 9px; color: #666; line-height: 1;">
                                                    <field name="year"/> • <field name="market"/>
                                                </div>
                                            </div>
                                        </div>
                                    </t>
                                </templates>
                            </kanban>
                        </field>
                    </group>

                    <notebook>
                        <page string="📋 Líneas del Servicio" icon="fa-list">
                            <div class="alert alert-warning" style="margin-bottom: 15px;">
                                <strong><i class="fa fa-cog"/> Componentes:</strong> 
                                Agrega productos (repuestos) y servicios (mano de obra) necesarios.
                            </div>
                            <field name="service_line_ids"
                                   context="{'default_display_type': 'line'}"
                                   options="{'no_create': False}">
                                <list string="Líneas del Servicio" editable="bottom"
                                      decoration-info="product_id and product_id.type == 'service'"
                                      decoration-success="product_id and product_id.type == 'consu'">
                                    <field name="sequence" widget="handle"/>
                                    <field name="product_id" 
                                           domain="['|', ('type', '=', 'service'), ('type', '=', 'consu')]"
                                           options="{'no_create': True}"/>
                                    <field name="name" required="1"/>
                                    <field name="quantity"/>
                                    <field name="price_unit"/>
                                    <field name="subtotal" readonly="1"/>
                                </list>
                            </field>
                        </page>
                        <page string="🔧 Workflow del Servicio" icon="fa-sitemap">
                            <div class="alert alert-primary" style="margin-bottom: 20px; border-left: 4px solid #007bff;">
                                <strong><i class="fa fa-sitemap"/> Plantilla de Proceso:</strong> 
                                Define el flujo operativo del servicio. Esta plantilla se reutilizará en reparaciones futuras.
                            </div>
                            
                            <!-- Vista de Workflow Innovadora -->
                            <div class="workflow-container" style="background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%); padding: 20px; border-radius: 8px; min-height: 400px;">
                                <field name="step_ids" mode="kanban" options="{'no_create': False}">
                                    <kanban default_group_by="is_done" class="o_kanban_small_column" 
                                            on_create="quick_create" quick_create_view="view_motorcycle_service_step_form_quick">
                                        <field name="name"/>
                                        <field name="is_done"/>
                                        <field name="note"/>
                                        <field name="sequence"/>
                                        <templates>
                                            <t t-name="card">
                                                <div class="oe_kanban_card workflow-step-card" 
                                                     t-att-class="record.is_done.raw_value ? 'step-completed' : 'step-pending'"
                                                     style="margin: 8px; border-radius: 12px; box-shadow: 0 2px 8px rgba(0,0,0,0.1); transition: all 0.3s ease; position: relative; overflow: hidden;">
                                                    
                                                    <!-- Indicador de Estado -->
                                                    <div class="step-indicator" 
                                                         t-att-style="record.is_done.raw_value ? 'background: linear-gradient(45deg, #28a745, #20c997);' : 'background: linear-gradient(45deg, #ffc107, #fd7e14);'"
                                                         style="height: 4px; width: 100%;"></div>
                                                    
                                                    <div class="oe_kanban_content" style="padding: 12px;">
                                                        <!-- Header con ícono de estado -->
                                                        <div class="d-flex align-items-center mb-2">
                                                            <div class="status-icon me-2" 
                                                                 t-att-style="record.is_done.raw_value ? 'color: #28a745;' : 'color: #ffc107;'">
                                                                <i t-att-class="record.is_done.raw_value ? 'fa fa-check-circle' : 'fa fa-clock-o'" 
                                                                   style="font-size: 16px;"></i>
                                                            </div>
                                                            <div class="step-number" 
                                                                 style="background: #6c757d; color: white; border-radius: 50%; width: 20px; height: 20px; display: flex; align-items: center; justify-content: center; font-size: 10px; font-weight: bold;">
                                                                <t t-esc="record.sequence.raw_value"/>
                                                            </div>
                                                        </div>
                                                        
                                                        <!-- Contenido del paso -->
                                                        <div class="step-content">
                                                            <div class="step-title" style="font-weight: 600; font-size: 13px; line-height: 1.3; margin-bottom: 6px; color: #212529;">
                                                                <field name="name"/>
                                                            </div>
                                                            <div class="step-note" style="font-size: 11px; color: #6c757d; line-height: 1.2;" t-if="record.note.raw_value">
                                                                <i class="fa fa-sticky-note-o me-1"></i>
                                                                <field name="note"/>
                                                            </div>
                                                        </div>
                                                        
                                                        <!-- Footer con toggle -->
                                                        <div class="step-footer mt-2 pt-2" style="border-top: 1px solid #e9ecef;">
                                                            <div class="d-flex justify-content-between align-items-center">
                                                                <small class="text-muted" style="font-size: 10px;">
                                                                    <t t-if="record.is_done.raw_value">✅ Completado</t>
                                                                    <t t-else="">⏳ Pendiente</t>
                                                                </small>
                                                                <field name="is_done" widget="boolean_toggle" 
                                                                       options="{'terminology': 'switch'}"
                                                                       style="transform: scale(0.8);"/>
                                                            </div>
                                                        </div>
                                                    </div>
                                                    
                                                    <!-- Conector visual (solo para pendientes) -->
                                                    <div t-if="!record.is_done.raw_value" class="step-connector" 
                                                         style="position: absolute; bottom: -8px; left: 50%; transform: translateX(-50%); width: 2px; height: 16px; background: #6c757d; opacity: 0.3;"></div>
                                                </div>
                                            </t>
                                        </templates>
                                    </kanban>
                                </field>
                            </div>
                            
                            <!-- Leyenda del Workflow -->
                            <div class="workflow-legend mt-3" style="background: white; padding: 15px; border-radius: 6px; border: 1px solid #dee2e6;">
                                <div class="row text-center">
                                    <div class="col-4">
                                        <div class="legend-item">
                                            <i class="fa fa-clock-o" style="color: #ffc107; font-size: 18px;"></i>
                                            <div style="font-size: 12px; margin-top: 4px;"><strong>Pendiente</strong></div>
                                            <div style="font-size: 10px; color: #6c757d;">Pasos por ejecutar</div>
                                        </div>
                                    </div>
                                    <div class="col-4">
                                        <div class="legend-item">
                                            <i class="fa fa-check-circle" style="color: #28a745; font-size: 18px;"></i>
                                            <div style="font-size: 12px; margin-top: 4px;"><strong>Completado</strong></div>
                                            <div style="font-size: 10px; color: #6c757d;">Pasos finalizados</div>
                                        </div>
                                    </div>
                                    <div class="col-4">
                                        <div class="legend-item">
                                            <i class="fa fa-plus-circle" style="color: #007bff; font-size: 18px;"></i>
                                            <div style="font-size: 12px; margin-top: 4px;"><strong>Agregar</strong></div>
                                            <div style="font-size: 10px; color: #6c757d;">Nuevos pasos</div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_motorcycle_service_step_list" model="ir.ui.view">
        <field name="name">motorcycle.service.step.list</field>
        <field name="model">motorcycle.service.step</field>
        <field name="arch" type="xml">
            <list string="Pasos del Servicio">
                <field name="name"/>
                <field name="is_done"/>
                <field name="note"/>
                <field name="pdf_file" filename="pdf_filename" widget="pdf_viewer"/>
            </list>
        </field>
    </record>

    <record id="view_motorcycle_service_line_tree" model="ir.ui.view">
        <field name="name">motorcycle.service.line.tree</field>
        <field name="model">motorcycle.service.line</field>
        <field name="arch" type="xml">
            <list string="Líneas del Servicio" editable="bottom">
                <field name="sequence" widget="handle"/>
                <field name="product_id"/>
                <field name="name"/>
                <field name="quantity"/>
                <field name="price_unit"/>
                <field name="subtotal"/>
            </list>
        </field>
    </record>

    <!-- Vista rápida para crear pasos del servicio -->
    <record id="view_motorcycle_service_step_form_quick" model="ir.ui.view">
        <field name="name">motorcycle.service.step.form.quick</field>
        <field name="model">motorcycle.service.step</field>
        <field name="arch" type="xml">
            <form string="Nuevo Paso">
                <group>
                    <field name="sequence" invisible="1"/>
                    <field name="name" placeholder="Ej: Cambiar aceite del motor"/>
                    <field name="note" placeholder="Instrucciones específicas..." widget="text"/>
                </group>
            </form>
        </field>
    </record>
</odoo>