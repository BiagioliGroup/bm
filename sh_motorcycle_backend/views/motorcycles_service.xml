<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- VISTA KANBAN PREMIUM PARA SERVICIOS -->
    <record id="view_motorcycle_service_kanban" model="ir.ui.view">
        <field name="name">motorcycle.service.kanban</field>
        <field name="model">motorcycle.service</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile" default_group_by="motorcycle_ids">
                <field name="name"/>
                <field name="motorcycle_ids"/>
                <field name="description"/>
                <field name="total_service_cost"/>
                <field name="total_parts_cost"/>
                <field name="total_services_cost"/>
                <field name="currency_id"/>
                <field name="step_ids"/>
                <field name="service_line_ids"/>
                <templates>
                    <t t-name="card">
                        <div class="oe_kanban_card oe_kanban_global_click" 
                             style="border: 1px solid #e9ecef; border-radius: 10px; overflow: hidden; box-shadow: 0 2px 8px rgba(0,0,0,0.1);">
                            
                            <!-- Header con gradiente -->
                            <div style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); color: white; padding: 15px;">
                                <div class="o_kanban_record_top">
                                    <div class="o_kanban_record_headings">
                                        <strong class="o_kanban_record_title" style="color: white; font-size: 1.1em;">
                                            <field name="name"/>
                                        </strong>
                                        <div class="o_kanban_record_subtitle" style="color: rgba(255,255,255,0.8); margin-top: 5px;">
                                            <field name="motorcycle_ids" widget="many2many_tags"/>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            
                            <!-- Contenido principal -->
                            <div class="oe_kanban_content" style="padding: 15px;">
                                <div class="o_kanban_record_body">
                                    <div class="row" t-if="record.description.raw_value">
                                        <div class="col-12" style="margin-bottom: 10px;">
                                            <small class="text-muted">
                                                <i class="fa fa-comment-o"/> <field name="description"/>
                                            </small>
                                        </div>
                                    </div>
                                    
                                    <!-- Estad√≠sticas visuales -->
                                    <div class="row">
                                        <div class="col-6 text-center">
                                            <div style="background: #f8f9fa; padding: 8px; border-radius: 5px; margin-bottom: 5px;">
                                                <small class="text-muted">L√≠neas</small><br/>
                                                <strong style="color: #007bff;">
                                                    <t t-esc="record.service_line_ids.raw_value.length"/>
                                                </strong>
                                            </div>
                                        </div>
                                        <div class="col-6 text-center">
                                            <div style="background: #f8f9fa; padding: 8px; border-radius: 5px; margin-bottom: 5px;">
                                                <small class="text-muted">Pasos</small><br/>
                                                <strong style="color: #28a745;">
                                                    <t t-esc="record.step_ids.raw_value.length"/>
                                                </strong>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                
                                <!-- Footer con costos -->
                                <div class="o_kanban_record_bottom" style="border-top: 1px solid #e9ecef; padding-top: 15px; margin-top: 15px;">
                                    <div class="row text-center">
                                        <div class="col-12">
                                            <div style="background: linear-gradient(45deg, #28a745, #20c997); color: white; padding: 10px; border-radius: 8px; margin-bottom: 10px;">
                                                <strong style="font-size: 1.2em;">
                                                    <field name="total_service_cost" widget="monetary" 
                                                           options="{'currency_field': 'currency_id'}"/>
                                                </strong>
                                                <div style="font-size: 0.8em; opacity: 0.9;">Total del Servicio</div>
                                            </div>
                                        </div>
                                    </div>
                                    
                                    <div class="row">
                                        <div class="col-6 text-center">
                                            <small class="text-muted">
                                                <i class="fa fa-cube"/> Repuestos<br/>
                                                <strong>
                                                    <field name="total_parts_cost" widget="monetary" 
                                                           options="{'currency_field': 'currency_id'}"/>
                                                </strong>
                                            </small>
                                        </div>
                                        <div class="col-6 text-center">
                                            <small class="text-muted">
                                                <i class="fa fa-user"/> M.O.<br/>
                                                <strong>
                                                    <field name="total_services_cost" widget="monetary" 
                                                           options="{'currency_field': 'currency_id'}"/>
                                                </strong>
                                            </small>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- ACCI√ìN MEJORADA -->
    <record id="action_motorcycle_service" model="ir.actions.act_window">
        <field name="name">üîß Servicios de Motocicletas</field>
        <field name="res_model">motorcycle.service</field>
        <field name="view_mode">kanban,list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                ¬°Organiza tu primer servicio t√©cnico!
            </p>
            <p>
                <strong>Gesti√≥n profesional de servicios</strong> con todas las herramientas que necesitas:
            </p>
            <ul style="text-align: left; display: inline-block;">
                <li>üîß Organizaci√≥n por pasos operativos</li>
                <li>üí∞ Control de costos autom√°tico</li>
                <li>üì¶ Gesti√≥n de repuestos integrada</li>
                <li>üë®‚Äçüîß Seguimiento de mano de obra</li>
                <li>üìä Reportes de rentabilidad</li>
            </ul>
        </field>
    </record>

    <menuitem id="menu_motorcycle_service_root"
              name="üîß Servicios de Motos"
              parent="sh_motorcycle_menuitem_root"
              sequence="25"
              action="action_motorcycle_service"/>

    <!-- LISTA MEJORADA CON INDICADORES VISUALES -->
    <record id="view_motorcycle_service_list" model="ir.ui.view">
        <field name="name">motorcycle.service.list</field>
        <field name="model">motorcycle.service</field>
        <field name="arch" type="xml">
            <list string="Servicios de Motocicleta"
                  decoration-info="total_service_cost &lt; 1000"
                  decoration-warning="total_service_cost &gt;= 1000 and total_service_cost &lt; 5000"
                  decoration-danger="total_service_cost &gt;= 5000"
                  decoration-muted="not motorcycle_ids"
                  decoration-bf="step_ids"
                  sample="1"
                  multi_edit="1"
                  export_xlsx="1">
                
                <field name="name" string="N√∫mero de Servicio"/>
                <field name="motorcycle_ids" widget="many2many_tags" 
                       options="{'color_field': 'make_id'}" string="Motocicletas"/>
                <field name="description" optional="show"/>
                <field name="currency_id" column_invisible="1"/>
                <field name="total_parts_cost" widget="monetary" 
                       options="{'currency_field': 'currency_id'}" string="üí∞ Repuestos" 
                       sum="Total Repuestos"/>
                <field name="total_services_cost" widget="monetary" 
                       options="{'currency_field': 'currency_id'}" string="üë®‚Äçüîß Mano de Obra"
                       sum="Total M.O."/>
                <field name="total_service_cost" widget="monetary" 
                       options="{'currency_field': 'currency_id'}" string="üéØ Total"
                       sum="Gran Total"/>
                <field name="step_ids" widget="many2many_tags" optional="hide" 
                       string="Pasos" options="{'color_field': 'is_done'}"/>
                <field name="service_line_ids" column_invisible="1"/>
            </list>
        </field>
    </record>

    <!-- FORMULARIO PREMIUM -->
    <record id="view_motorcycle_service_form" model="ir.ui.view">
        <field name="name">motorcycle.service.form</field>
        <field name="model">motorcycle.service</field>
        <field name="arch" type="xml">
            <form string="Servicio de Motocicleta">
                <header>
                    <!-- Botones de acci√≥n r√°pida -->
                    <button name="action_duplicate_service" string="Duplicar Servicio" 
                            type="object" class="btn-secondary" icon="fa-copy"/>
                    <button name="action_generate_report" string="Generar Reporte" 
                            type="object" class="btn-primary" icon="fa-file-pdf-o"/>
                </header>
                
                <sheet>
                    <!-- Botones estad√≠sticos -->
                    <div class="oe_button_box" name="button_box">
                        <button class="oe_stat_button" icon="fa-motorcycle">
                            <div class="o_field_widget o_stat_info">
                                <span class="o_stat_value">
                                    <field name="motorcycle_ids" widget="statinfo"/>
                                </span>
                                <span class="o_stat_text">Motocicletas</span>
                            </div>
                        </button>
                        <button class="oe_stat_button" icon="fa-list">
                            <div class="o_field_widget o_stat_info">
                                <span class="o_stat_value">
                                    <field name="service_line_ids" widget="statinfo"/>
                                </span>
                                <span class="o_stat_text">L√≠neas</span>
                            </div>
                        </button>
                        <button class="oe_stat_button" icon="fa-check-square-o">
                            <div class="o_field_widget o_stat_info">
                                <span class="o_stat_value">
                                    <field name="step_ids" widget="statinfo"/>
                                </span>
                                <span class="o_stat_text">Pasos</span>
                            </div>
                        </button>
                    </div>

                    <div class="oe_title">
                        <label for="name" class="oe_edit_only"/>
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                    </div>
                    
                    <!-- Panel de informaci√≥n principal -->
                    <div class="alert alert-info" role="alert" style="margin: 15px 0;">
                        <div class="row">
                            <div class="col-md-8">
                                <h4><i class="fa fa-info-circle"/> Informaci√≥n del Servicio</h4>
                                <p>Gestiona todos los aspectos t√©cnicos y econ√≥micos del servicio.</p>
                            </div>
                            <div class="col-md-4 text-right">
                                <div style="font-size: 1.5em; font-weight: bold; color: #28a745;">
                                    <field name="total_service_cost" widget="monetary" 
                                           options="{'currency_field': 'currency_id'}"/>
                                </div>
                                <small class="text-muted">Costo Total del Servicio</small>
                            </div>
                        </div>
                    </div>
                    
                    <group>
                        <group string="üèçÔ∏è Informaci√≥n General" class="o_group_col_6">
                            <field name="motorcycle_ids" widget="many2many_tags" 
                                   options="{'color_field': 'make_id', 'no_create': True}"/>
                            <field name="description" placeholder="Descripci√≥n general del servicio..."/>
                            <field name="labor_description" placeholder="Detalle del trabajo a realizar..."/>
                        </group>
                        <group string="üí∞ Resumen de Costos" class="o_group_col_6">
                            <field name="currency_id" invisible="1"/>
                            <field name="total_parts_cost" widget="monetary" 
                                   options="{'currency_field': 'currency_id'}" readonly="1"
                                   style="font-size: 1.1em;"/>
                            <field name="total_services_cost" widget="monetary" 
                                   options="{'currency_field': 'currency_id'}" readonly="1"
                                   style="font-size: 1.1em;"/>
                            <field name="total_service_cost" widget="monetary" 
                                   options="{'currency_field': 'currency_id'}" readonly="1"
                                   class="oe_subtotal_footer_separator"
                                   style="font-weight: bold; font-size: 1.3em; color: #28a745;"/>
                        </group>
                    </group>
                    
                    <!-- L√≠neas de servicio con dise√±o mejorado -->
                    <group string="üìã L√≠neas del Servicio">
                        <div class="alert alert-warning" role="alert">
                            <strong><i class="fa fa-lightbulb-o"/> Tip:</strong> 
                            Usa 'Secci√≥n' para agrupar elementos y 'Nota' para comentarios especiales.
                        </div>
                        <field name="service_line_ids"
                               context="{'default_display_type': 'line'}"
                               widget="section_and_note_one2many"
                               mode="list"
                               options="{'no_create': False}"/>
                    </group>
                    
                    <!-- Tabs organizados -->
                    <notebook>
                        <page string="‚úÖ Pasos Operativos" icon="fa-tasks">
                            <div class="alert alert-success" role="alert" style="margin-bottom: 15px;">
                                <strong><i class="fa fa-check-circle"/> Checklist:</strong> 
                                Organiza el trabajo en pasos secuenciales para garantizar calidad.
                            </div>
                            <field name="step_ids">
                                <list string="Lista de Pasos" editable="bottom"
                                      decoration-success="is_done == True"
                                      decoration-muted="is_done == False">
                                    <field name="sequence" widget="handle"/>
                                    <field name="name" style="width: 40%;"/>
                                    <field name="is_done" widget="boolean_toggle"/>
                                    <field name="note" optional="show" style="width: 30%;"/>
                                    <field name="pdf_file" filename="pdf_filename" 
                                           widget="binary" optional="hide"/>
                                </list>
                            </field>
                        </page>
                        
                        <page string="üìä An√°lisis de Costos" icon="fa-chart-pie">
                            <div class="row">
                                <div class="col-md-4">
                                    <div class="panel panel-default">
                                        <div class="panel-heading">
                                            <h3 class="panel-title">
                                                <i class="fa fa-cube"/> Repuestos
                                            </h3>
                                        </div>
                                        <div class="panel-body text-center">
                                            <h2 style="color: #007bff; margin: 20px 0;">
                                                <field name="total_parts_cost" widget="monetary" 
                                                       options="{'currency_field': 'currency_id'}"/>
                                            </h2>
                                            <small class="text-muted">Costo de materiales</small>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="panel panel-default">
                                        <div class="panel-heading">
                                            <h3 class="panel-title">
                                                <i class="fa fa-user"/> Mano de Obra
                                            </h3>
                                        </div>
                                        <div class="panel-body text-center">
                                            <h2 style="color: #28a745; margin: 20px 0;">
                                                <field name="total_services_cost" widget="monetary" 
                                                       options="{'currency_field': 'currency_id'}"/>
                                            </h2>
                                            <small class="text-muted">Costo de servicios</small>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="panel panel-default">
                                        <div class="panel-heading">
                                            <h3 class="panel-title">
                                                <i class="fa fa-calculator"/> Total
                                            </h3>
                                        </div>
                                        <div class="panel-body text-center">
                                            <h2 style="color: #dc3545; margin: 20px 0;">
                                                <field name="total_service_cost" widget="monetary" 
                                                       options="{'currency_field': 'currency_id'}"/>
                                            </h2>
                                            <small class="text-muted">Precio final</small>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- VISTAS DE PASOS MEJORADAS -->
    <record id="view_motorcycle_service_step_list" model="ir.ui.view">
        <field name="name">motorcycle.service.step.list</field>
        <field name="model">motorcycle.service.step</field>
        <field name="arch" type="xml">
            <list string="Pasos del Servicio" editable="bottom"
                  decoration-success="is_done == True"
                  decoration-muted="is_done == False"
                  decoration-info="pdf_file">
                <field name="sequence" widget="handle"/>
                <field name="name"/>
                <field name="is_done" widget="boolean_toggle"/>
                <field name="note" optional="show"/>
                <field name="pdf_file" filename="pdf_filename" widget="binary" optional="hide"/>
            </list>
        </field>
    </record>

    <!-- VISTAS DE L√çNEAS MEJORADAS -->
    <record id="view_motorcycle_service_line_tree" model="ir.ui.view">
        <field name="name">motorcycle.service.line.tree</field>
        <field name="model">motorcycle.service.line</field>
        <field name="arch" type="xml">
            <list string="L√≠neas del Servicio" editable="bottom"
                  decoration-bf="display_type == 'section'"
                  decoration-it="display_type == 'note'"
                  decoration-info="product_id and product_id.type == 'service'"
                  decoration-success="product_id and product_id.type == 'consu'"
                  decoration-muted="display_type != 'line'">
                <field name="sequence" widget="handle"/>
                <field name="display_type" column_invisible="1"/>
                <field name="product_id" 
                       options="{'no_create': True, 'no_open': True}"
                       required="display_type == 'line'"
                       style="width: 25%;"/>
                <field name="name" style="width: 35%;"/>
                <field name="quantity" readonly="display_type != 'line'" style="width: 10%;"/>
                <field name="price_unit" readonly="display_type != 'line'" 
                       widget="monetary" style="width: 15%;"/>
                <field name="subtotal" readonly="display_type != 'line'" 
                       sum="Total" widget="monetary" style="width: 15%;"/>
                <field name="currency_id" column_invisible="1"/>
            </list>
        </field>
    </record>

    <record id="view_motorcycle_service_line_form" model="ir.ui.view">
        <field name="name">motorcycle.service.line.form</field>
        <field name="model">motorcycle.service.line</field>
        <field name="arch" type="xml">
            <form string="L√≠nea del Servicio">
                <sheet>
                    <group>
                        <group string="Tipo de L√≠nea">
                            <field name="display_type" widget="radio" options="{'horizontal': false}"/>
                        </group>
                        <group string="Producto" invisible="display_type != 'line'">
                            <field name="product_id" 
                                   required="display_type == 'line'"
                                   options="{'no_create': True}"/>
                        </group>
                    </group>
                    
                    <group>
                        <group string="Descripci√≥n">
                            <field name="name" 
                                   required="display_type in ['section', 'note']"
                                   placeholder="Descripci√≥n detallada..."/>
                        </group>
                        <group string="Cantidades y Precios" invisible="display_type != 'line'">
                            <field name="quantity"/>
                            <field name="price_unit" widget="monetary"/>
                            <field name="currency_id" invisible="1"/>
                            <field name="subtotal" widget="monetary" 
                                   options="{'currency_field': 'currency_id'}" readonly="1"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>