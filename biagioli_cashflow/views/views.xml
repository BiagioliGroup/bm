<?xml version="1.0" encoding="UTF-8"?>
<odoo>


    <!-- ============================
         VISTA GRID
         ============================ -->
    <record id="view_cashflow_projection_grid" model="ir.ui.view">
        <field name="name">cashflow.projection.grid</field>
        <field name="model">cashflow.projection</field>
        <field name="arch" type="xml">
            <grid string="Cashflow Proyectado"
                create="true" edit="true" delete="true"
                adjustment="object" adjust_name="mi_metodo_ajuste"
                hide_line_total="false" hide_column_total="true"
                barchart_total="true"
                create_inline="true"
                display_empty="true">

                <field name="partner_id" type="row"/>
                <field name="date" type="col">
                    <range name="day" string="Día" span="day" step="day" default="1"/>
                    <range name="month" string="Mes" span="month" step="day"/>
                </field>
                <field name="amount" type="measure" widget="monetary"
                       options="{'currency_field': 'currency_id'}"/>
            </grid>
        </field>
    </record>

    
    
