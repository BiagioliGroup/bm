<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <!-- ============================
         VISTA GRID
         ============================ -->
    <record id="view_cashflow_projection_grid" model="ir.ui.view">
        <field name="name">cashflow.projection.grid</field>
        <field name="model">cashflow.projection</field>
        <field name="arch" type="xml">
            <grid string="Cashflow Proyectado"
                  create="true" edit="true" delete="true"
                  create_inline="true" display_empty="true">

                <field name="diario" type="row"/>
                <field name="type" type="row"/>
                <field name="partner_id" type="row"/>
                <field name="date" type="col">
                

                    <range name="week"  string="Semana" span="week"  step="day" default="1"/>
                    <range name="day"   string="Día" span="day"   step="day" />
                    <range name="month" string="Mes" span="month" step="day"/>
                </field>
                <field name="amount" type="measure"/>
            </grid>
        </field>
    </record>

    <!-- ============================
         ACCIÓN
         ============================ -->
    <record id="action_cashflow_projection_grid" model="ir.actions.act_window">
        <field name="name">Cashflow Proyectado</field>
        <field name="res_model">cashflow.projection</field>
        <field name="view_mode">grid</field>
        <field name="view_id" ref="biagioli_cashflow.view_cashflow_projection_grid"/>
    </record>

    <!-- ============================
         MENÚ
         ============================ -->
    <menuitem id="menu_cashflow_root"
              name="Cashflow"
              parent="accountant.menu_accounting"
              sequence="120"/>
    <menuitem id="menu_cashflow_projection_grid"
              name="Cashflow Proyectado"
              parent="menu_cashflow_root"
              action="biagioli_cashflow.action_cashflow_projection_grid"
              sequence="10"/>

</odoo>
